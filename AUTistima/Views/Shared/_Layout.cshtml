                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Entrar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-salmon ms-2" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-heart me-1"></i> Faça Parte
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
