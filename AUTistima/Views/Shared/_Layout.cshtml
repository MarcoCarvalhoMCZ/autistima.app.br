    <style>
        :root {
            --sidebar-width: 296px;
            --sidebar-collapsed-width: 0px;
            --topbar-height: 60px;
            --bottom-nav-height: 70px;
            --color-salmon: #F28B82;
            --color-azul: #AECBFA;
            --color-ink: #1A1F2B;
            --sidebar-border: rgba(242,139,130,0.35);
            --sidebar-glow: rgba(242,139,130,0.18);
            --sidebar-chip: rgba(25,32,44,0.08);
        }

        html, body {
            height: 100%;
            width: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            overflow-x: hidden;
        }

        body.sidebar-open {
            overflow: hidden;
        }

        .sidebar {
            position: fixed;
            top: var(--topbar-height);
            left: 0;
            width: var(--sidebar-width);
            height: calc(100vh - var(--topbar-height));
            background: linear-gradient(180deg, rgba(242,139,130,0.95) 0%, rgba(174,203,250,0.92) 100%);
            backdrop-filter: blur(18px);
            border-right: 1px solid rgba(255,255,255,0.3);
            box-shadow: 4px 0 32px rgba(242, 139, 130, 0.35);
            z-index: 1020;
            transform: translateX(-100%);
            transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
            overflow-y: auto;
            overflow-x: hidden;
        }

        .sidebar::before {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 20% 20%, rgba(174,203,250,0.35), transparent 55%);
            pointer-events: none;
        }

        .sidebar.show {
            transform: translateX(0);
        }

        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: rgba(0,0,0,0.15);
            border-radius: 3px;
        }

        .sidebar-header {
            padding: 1.75rem 1.5rem 1.25rem;
            position: sticky;
            top: 0;
            z-index: 10;
            background: linear-gradient(135deg, rgba(242,139,130,0.9), rgba(240,98,146,0.85));
            color: #fff;
            border-bottom: 1px solid rgba(255,255,255,0.25);
            box-shadow: 0 12px 30px rgba(242,139,130,0.25);
        }

        .sidebar-header .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .sidebar-header .user-avatar {
            width: 56px;
            height: 56px;
            border-radius: 16px;
            background: rgba(255,255,255,0.15);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.35rem;
            font-weight: 700;
            color: var(--color-salmon);
            background: #fff;
        }

        .sidebar-header .user-name {
            font-weight: 600;
            font-size: 1rem;
        }

        .sidebar-header .user-type {
            font-size: 0.75rem;
            letter-spacing: 0.04em;
            background: rgba(255,255,255,0.2);
            padding: 2px 10px;
            border-radius: 999px;
        }

        .sidebar-section {
            padding: 0.25rem 0 0.75rem;
        }

        .sidebar-section-title {
            padding: 0.75rem 1.5rem 0.5rem;
            font-size: 0.72rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.12em;
            color: rgba(26,31,43,0.6);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .sidebar-section-title .sidebar-chip {
            font-weight: 600;
            font-size: 0.65rem;
            padding: 2px 8px;
        }

        .sidebar-nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-nav-item {
            margin: 0.1rem 0.85rem;
        }

        .sidebar-nav-link {
            position: relative;
            display: flex;
            flex-direction: column;
            gap: 0.15rem;
            padding: 0.85rem 1rem;
            border-radius: 14px;
            text-decoration: none;
            background: rgba(255,255,255,0.65);
            border: 1px solid transparent;
            transition: all 0.25s ease;
            color: var(--color-ink);
            box-shadow: 0 10px 25px rgba(15,23,42,0.05);
        }

        .sidebar-nav-link:hover {
            border-color: var(--sidebar-border);
            box-shadow: 0 15px 35px rgba(242,139,130,0.2);
            transform: translateY(-1px);
        }

        .sidebar-nav-link.active {
            background: linear-gradient(120deg, var(--color-salmon), #f06292);
            color: #fff;
            border-color: transparent;
            box-shadow: 0 20px 40px rgba(242,139,130,0.35);
        }

        .sidebar-nav-link .icon-label {
            display: flex;
            align-items: center;
            gap: 0.65rem;
            font-weight: 600;
        }

        .sidebar-nav-link .icon-label i {
            font-size: 1.2rem;
            color: inherit;
        }

        .sidebar-nav-link small {
            font-size: 0.72rem;
            color: rgba(26,31,43,0.6);
        }

        .sidebar-nav-link.active small {
            color: rgba(255,255,255,0.85);
        }

        .sidebar-nav-link.admin {
            border-color: rgba(220,53,69,0.25);
        }

        .sidebar-nav-link.admin .icon-label i {
            color: #dc3545;
        }

        .sidebar-nav-link.mae {
            border-color: rgba(242,139,130,0.4);
        }

        .sidebar-nav-link.mae .icon-label i {
            color: #F28B82;
        }

        .sidebar-nav-link.profissional {
            border-color: rgba(13,110,253,0.25);
        }

        .sidebar-nav-link.profissional .icon-label i {
            color: #0d6efd;
        }

        .sidebar-nav-link.empresa {
            border-color: rgba(25,135,84,0.25);
        }

        .sidebar-nav-link.empresa .icon-label i {
            color: #198754;
        }

        .sidebar-nav-link.governo {
            border-color: rgba(111,66,193,0.28);
        }

        .sidebar-nav-link.governo .icon-label i {
            color: #6f42c1;
        }

        .sidebar-chip {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            padding: 3px 10px;
            border-radius: 999px;
            background: var(--sidebar-chip);
            font-size: 0.7rem;
            color: rgba(26,31,43,0.65);
            font-weight: 600;
        }

        .sidebar-chip.subtle {
            background: rgba(255,255,255,0.35);
            color: #fff;
        }

        .sidebar-divider {
            height: 1px;
            margin: 0.75rem 1.5rem;
            background: linear-gradient(90deg, transparent, rgba(242,139,130,0.6), transparent);
        }

        .sidebar-toggle {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1100;
            width: 44px;
            height: 44px;
            border: none;
            border-radius: 12px;
            background: var(--color-salmon);
            color: #fff;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            transition: all 0.25s ease;
            box-shadow: 0 4px 16px rgba(242, 139, 130, 0.35);
        }

        .sidebar-toggle:hover {
            background: #f06292;
            transform: translateY(-2px);
            box-shadow: 0 6px 24px rgba(242, 139, 130, 0.45);
        }

        .sidebar-toggle.hidden {
            display: none !important;
        }

        .sidebar-close {
            position: absolute;
            top: 1rem;
            right: 1rem;
            border: none;
            border-radius: 12px;
            width: 38px;
            height: 38px;
            background: rgba(255,255,255,0.2);
            color: #fff;
            cursor: pointer;
            transition: background 0.2s ease;
        }

        .sidebar-close:hover {
            background: rgba(255,255,255,0.35);
        }

        .sidebar-overlay {
            position: fixed;
            inset: 0;
            background: rgba(16,21,31,0.55);
            z-index: 1019;
            opacity: 0;
            visibility: hidden;
            pointer-events: none;
            transition: all 0.3s ease;
        }

        .sidebar-overlay.show {
            opacity: 1;
            visibility: visible;
            pointer-events: auto;
        }

        .main-wrapper {
            margin-top: 60px;
            margin-left: 0;
            transition: margin-left 0.35s cubic-bezier(0.4, 0, 0.2, 1);
            flex: 1;
            width: 100%;
            min-height: calc(100vh - 60px);
            background: #f8f9fa;
        }

        .main-wrapper > .container,
        .main-wrapper > .container-fluid {
            padding-left: 15px;
            padding-right: 15px;
        }

        .navbar-wrapper {
            position: relative;
            z-index: 1030;
        }

        .navbar-autistima {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            width: 100%;
            height: 60px !important;
            padding: 0 20px !important;
            background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
            border-bottom: 1px solid rgba(242, 139, 130, 0.2);
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
            z-index: 1040;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .navbar-autistima .container-fluid {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: relative;
        }

        .topbar-actions {
            position: absolute;
            right: 10px;
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }

        .topbar-icon-btn {
            color: #334155;
            transition: color 0.2s ease, background-color 0.2s ease;
            font-size: 1.3rem;
            width: 44px;
            height: 44px;
            padding: 0;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
        }

        .topbar-icon-btn:hover,
        .topbar-icon-btn:focus-visible {
            color: #1e293b;
            background-color: rgba(242, 139, 130, 0.2);
        }

        .navbar-autistima .navbar-brand {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            font-weight: 700;
            font-size: 1.25rem;
            color: var(--color-ink) !important;
            margin: 0;
        }

        .sidebar-footer {
            padding: 1.25rem 1.5rem 1.75rem;
            border-top: 1px solid rgba(0,0,0,0.08);
            background: rgba(255,255,255,0.8);
        }

        .sidebar-footer .btn {
            width: 100%;
            border-radius: 12px;
        }

        .sidebar-pwa-install {
            margin: 0.75rem 1.25rem 1.5rem;
            border-radius: 16px;
            padding: 1.1rem;
            text-align: center;
            background: linear-gradient(135deg, rgba(174,203,250,0.35), rgba(242,139,130,0.25));
            border: 1px solid rgba(255,255,255,0.6);
        }

        .sidebar-pwa-install .btn {
            border-radius: 12px;
        }

        .btn-danger:not(.btn-outline-danger) {
            box-shadow: 0 0 0 0 rgba(242, 139, 130, 0.7);
        }

        .mobile-bottom-nav {
            display: none;
        }

        @@media (max-width: 991.98px) {
            .main-wrapper {
                padding-bottom: calc(var(--bottom-nav-height) + 0.75rem);
            }

            .mobile-bottom-nav {
                position: fixed;
                left: 0;
                right: 0;
                bottom: 0;
                height: var(--bottom-nav-height);
                background: #fff;
                border-top: 1px solid rgba(15, 23, 42, 0.12);
                box-shadow: 0 -4px 20px rgba(15, 23, 42, 0.08);
                display: grid;
                grid-template-columns: repeat(5, minmax(0, 1fr));
                z-index: 1045;
                padding-bottom: env(safe-area-inset-bottom, 0px);
            }

            .mobile-bottom-nav-link {
                color: #334155;
                text-decoration: none;
                min-height: 56px;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                gap: 0.2rem;
                position: relative;
                font-size: 0.66rem;
                font-weight: 600;
            }

            .mobile-bottom-nav-link i {
                font-size: 1.1rem;
                line-height: 1;
            }

            .mobile-bottom-nav-link.active {
                color: #b42318;
            }

            .mobile-bottom-nav-link.active::before {
                content: "";
                position: absolute;
                top: 0;
                left: 20%;
                right: 20%;
                height: 3px;
                border-radius: 999px;
                background: var(--color-salmon);
            }

            .mobile-bottom-nav .badge {
                position: absolute;
                top: 8px;
                right: calc(50% - 16px);
                font-size: 0.58rem;
            }
        }

        /* Media query para desktop */
        @@media (min-width: 992px) {
            .sidebar-overlay {
                display: none !important;
                opacity: 0 !important;
                visibility: hidden !important;
                pointer-events: none !important;
            }

            .sidebar-close {
                display: none;
            }

            .sidebar-toggle {
                left: 15px;
            }

            .sidebar.show ~ .main-wrapper,
            body:has(.sidebar.show) .main-wrapper {
                margin-left: var(--sidebar-width);
                width: calc(100% - var(--sidebar-width));
            }
        }
    </style>

    <!-- Animação Pulse para Botão de Pânico -->
    <style>
        @@keyframes pulse {
            0%, 100% {
                opacity: 1;
                box-shadow: 0 0 0 0 rgba(242, 139, 130, 0.7);
            }
            50% {
                opacity: 0.8;
            }
            70% {
                box-shadow: 0 0 0 10px rgba(242, 139, 130, 0);
            }
        }

        .btn-danger[style*="animation"] {
            animation: pulse 2s infinite;
        }
    </style>
</head>
