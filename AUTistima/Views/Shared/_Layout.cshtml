                                <i class="bi bi-house-heart me-1"></i> Início
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Acolhimento" asp-action="Index">
                                <i class="bi bi-chat-heart me-1"></i> Central de Acolhimento
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Manejos" asp-action="Index">
                                <i class="bi bi-lightbulb me-1"></i> Manejos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Oportunidades" asp-action="Index">
                                <i class="bi bi-briefcase me-1"></i> Oportunidades
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Saude" asp-action="Index">
                                <i class="bi bi-heart-pulse me-1"></i> Saúde
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Glossario" asp-action="Index">
                                <i class="bi bi-book me-1"></i> Mini Dicionário
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Busca" asp-action="Index">
                                <i class="bi bi-search me-1"></i> Busca
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Ícone de Notificações -->
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-controller="Notificacoes" asp-action="Index" title="Notificações">
                                    <i class="bi bi-bell fs-5"></i>
                                    <span id="notificacao-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none; font-size: 0.6rem;">
                                        0
                                    </span>
                                </a>
                            </li>
                            <!-- Ícone de Chat -->
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-controller="Chat" asp-action="Index" title="Mensagens">
                                    <i class="bi bi-chat-dots fs-5"></i>
                                    <span id="chat-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary" style="display: none; font-size: 0.6rem;">
                                        0
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    @inject Microsoft.AspNetCore.Identity.UserManager<AUTistima.Models.ApplicationUser> UserManager
                                    @{
                                        var currentUser = await UserManager.GetUserAsync(User);
                                        if (currentUser?.TipoPerfil == AUTistima.Models.Enums.TipoPerfil.Administrador)
                                        {
                                            <li><a class="dropdown-item text-danger fw-semibold" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                                <i class="bi bi-gear me-2"></i>Administração
                                            </a></li>
                                            <li><hr class="dropdown-divider"></li>
                                        }
                                        else if (currentUser?.TipoPerfil == AUTistima.Models.Enums.TipoPerfil.ProfissionalSaude || 
                                                 currentUser?.TipoPerfil == AUTistima.Models.Enums.TipoPerfil.ProfissionalEducacao)
                                        {
                                            <li><a class="dropdown-item text-primary fw-semibold" asp-area="Profissional" asp-controller="Profissional" asp-action="Index">
                                                <i class="bi bi-person-badge me-2"></i>Área do Profissional
                                            </a></li>
                                            <li><hr class="dropdown-divider"></li>
                                        }
                                        else if (currentUser?.TipoPerfil == AUTistima.Models.Enums.TipoPerfil.Empresa)
                                        {
                                            <li><a class="dropdown-item text-success fw-semibold" asp-area="Empresa" asp-controller="Empresa" asp-action="Index">
                                                <i class="bi bi-building me-2"></i>Área da Empresa
                                            </a></li>
                                            <li><hr class="dropdown-divider"></li>
                                        }
                                        else if (currentUser?.TipoPerfil == AUTistima.Models.Enums.TipoPerfil.Governo)
                                        {
                                            <li><a class="dropdown-item fw-semibold" style="color: #6f42c1;" asp-area="Governo" asp-controller="Governo" asp-action="Index">
                                                <i class="bi bi-bank me-2"></i>Painel Governamental
                                            </a></li>
                                            <li><hr class="dropdown-divider"></li>
                                        }
                                        else if (currentUser?.TipoPerfil == AUTistima.Models.Enums.TipoPerfil.Mae)
                                        {
                                            <li><a class="dropdown-item fw-semibold" style="color: #F28B82;" asp-area="Mae" asp-controller="Mae" asp-action="Index">
                                                <i class="bi bi-house-heart me-2"></i>Meu Espaço
                                            </a></li>
                                            <li><hr class="dropdown-divider"></li>
                                        }
                                    }
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">
                                        <i class="bi bi-person me-2"></i>Meu Perfil
                                    </a></li>
                                    @if (currentUser?.TipoPerfil == AUTistima.Models.Enums.TipoPerfil.Mae)
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Filhos" asp-action="Index">
                                            <i class="bi bi-people me-2"></i>Meus Filhos
                                        </a></li>
                                    }
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangePassword">
                                        <i class="bi bi-key me-2"></i>Alterar Senha
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i>Sair
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
