@model IEnumerable<AUTistima.Models.Notification>
@{
    ViewData["Title"] = "Minhas Notifica√ß√µes";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-bell-fill text-primary"></i> Minhas Notifica√ß√µes
                </h2>
                @if (Model.Any(n => !n.Lida))
                {
                    <form asp-action="MarcarTodasLidas" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-check-all"></i> Marcar todas como lidas
                        </button>
                    </form>
                }
            </div>

            <!-- Configura√ß√£o de Push Notifications -->
            <div class="card shadow-sm border-0 mb-4" id="push-config-card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="mb-1">
                                <i class="bi bi-phone-vibrate text-primary me-2"></i>
                                Notifica√ß√µes Push
                            </h6>
                            <small class="text-muted" id="push-status">Verificando...</small>
                        </div>
                        <div>
                            <button type="button" class="btn btn-primary btn-sm" id="btn-ativar-push" style="display:none;">
                                <i class="bi bi-bell-fill"></i> Ativar
                            </button>
                            <button type="button" class="btn btn-outline-success btn-sm" id="btn-testar-push" style="display:none;">
                                <i class="bi bi-send"></i> Testar
                            </button>
                            <span class="badge bg-success" id="push-ativo" style="display:none;">
                                <i class="bi bi-check-circle"></i> Ativo
                            </span>
                            <span class="badge bg-warning text-dark" id="push-bloqueado" style="display:none;">
                                <i class="bi bi-x-circle"></i> Bloqueado
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            @if (TempData["Mensagem"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Mensagem"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-bell-slash display-1 text-muted"></i>
                        <h4 class="mt-3 text-muted">Nenhuma notifica√ß√£o</h4>
                        <p class="text-muted">Voc√™ est√° em dia! üíï</p>
                        <a href="/" class="btn btn-primary mt-3">
                            <i class="bi bi-house"></i> Voltar ao in√≠cio
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="list-group shadow-sm">
                    @foreach (var notificacao in Model)
                    {
                        var bgClass = notificacao.Lida ? "" : "bg-light";
                        var iconClass = notificacao.Tipo switch
                        {
                            TipoNotificacao.Acolhimento => "bi-heart-fill text-danger",
                            TipoNotificacao.Comentario => "bi-chat-dots-fill text-info",
                            TipoNotificacao.Mensagem => "bi-envelope-fill text-primary",
                            TipoNotificacao.ManejoValidado => "bi-check-circle-fill text-success",
                            TipoNotificacao.NovaOportunidade => "bi-briefcase-fill text-warning",
                            TipoNotificacao.Lembrete => "bi-alarm-fill text-secondary",
                            TipoNotificacao.BoasVindas => "bi-stars text-warning",
                            _ => "bi-bell-fill text-primary"
                        };
                        
                        <div class="list-group-item list-group-item-action @bgClass">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="d-flex align-items-start">
                                    <div class="me-3">
                                        <i class="bi @iconClass fs-4"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">
                                            @notificacao.Titulo
                                            @if (!notificacao.Lida)
                                            {
                                                <span class="badge bg-primary ms-2">Nova</span>
                                            }
                                        </h6>
                                        <p class="mb-1 text-muted">@notificacao.Mensagem</p>
                                        <small class="text-muted">
                                            <i class="bi bi-clock"></i>
                                            @notificacao.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                </div>
                                <div class="btn-group">
                                    @if (!notificacao.Lida)
                                    {
                                        <form asp-action="MarcarLida" asp-route-id="@notificacao.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Marcar como lida">
                                                <i class="bi bi-check"></i>
                                            </button>
                                        </form>
                                    }
                                    <form asp-action="Excluir" asp-route-id="@notificacao.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Excluir" onclick="return confirm('Excluir esta notifica√ß√£o?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                @if (Model.Count() >= 10)
                {
                    <div class="text-center mt-4">
                        <form asp-action="LimparTodas" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Tem certeza que deseja limpar todas as notifica√ß√µes?')">
                                <i class="bi bi-trash"></i> Limpar todas
                            </button>
                        </form>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Atualiza badge de notifica√ß√µes
        function atualizarBadge() {
            fetch('/Notificacoes/NaoLidas')
                .then(r => r.json())
                .then(data => {
                    const badge = document.getElementById('notificacao-badge');
                    if (badge) {
                        badge.textContent = data.count;
                        badge.style.display = data.count > 0 ? 'inline' : 'none';
                    }
                });
        }
        
        // Atualiza a cada 30 segundos
        setInterval(atualizarBadge, 30000);
        
        // Gerenciar Push Notifications
        document.addEventListener('DOMContentLoaded', async () => {
            const statusEl = document.getElementById('push-status');
            const btnAtivar = document.getElementById('btn-ativar-push');
            const btnTestar = document.getElementById('btn-testar-push');
            const badgeAtivo = document.getElementById('push-ativo');
            const badgeBloqueado = document.getElementById('push-bloqueado');
            
            if (!('Notification' in window) || !('serviceWorker' in navigator)) {
                statusEl.textContent = 'Seu navegador n√£o suporta notifica√ß√µes push';
                return;
            }
            
            const permission = Notification.permission;
            
            if (permission === 'granted') {
                statusEl.textContent = 'Notifica√ß√µes ativadas neste dispositivo';
                badgeAtivo.style.display = 'inline';
                btnTestar.style.display = 'inline-block';
                
                // Tentar registrar subscription se ainda n√£o existir
                try {
                    await window.PushManager?.subscribe();
                } catch (e) {
                    console.log('Subscription j√° existe ou erro:', e);
                }
            } else if (permission === 'denied') {
                statusEl.textContent = 'Notifica√ß√µes bloqueadas. Altere nas configura√ß√µes do navegador.';
                badgeBloqueado.style.display = 'inline';
            } else {
                statusEl.textContent = 'Receba notifica√ß√µes mesmo quando n√£o estiver no site';
                btnAtivar.style.display = 'inline-block';
            }
            
            // Bot√£o Ativar
            btnAtivar.addEventListener('click', async () => {
                btnAtivar.disabled = true;
                btnAtivar.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Ativando...';
                
                try {
                    const result = await window.PushManager?.requestPermission();
                    if (result === 'granted') {
                        statusEl.textContent = 'Notifica√ß√µes ativadas!';
                        badgeAtivo.style.display = 'inline';
                        btnAtivar.style.display = 'none';
                        btnTestar.style.display = 'inline-block';
                    } else {
                        statusEl.textContent = 'Permiss√£o negada';
                        badgeBloqueado.style.display = 'inline';
                        btnAtivar.style.display = 'none';
                    }
                } catch (e) {
                    statusEl.textContent = 'Erro ao ativar: ' + e.message;
                    btnAtivar.disabled = false;
                    btnAtivar.innerHTML = '<i class="bi bi-bell-fill"></i> Ativar';
                }
            });
            
            // Bot√£o Testar
            btnTestar.addEventListener('click', async () => {
                btnTestar.disabled = true;
                btnTestar.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
                
                try {
                    const response = await fetch('/Notificacoes/TestarPush', { method: 'POST' });
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('‚úÖ ' + data.message);
                    } else {
                        alert('‚ö†Ô∏è ' + data.message);
                    }
                } catch (e) {
                    alert('Erro: ' + e.message);
                }
                
                btnTestar.disabled = false;
                btnTestar.innerHTML = '<i class="bi bi-send"></i> Testar';
            });
        });
    </script>
}
