@model AUTistima.ViewModels.NotificacoesIndexViewModel
@using AUTistima.Models
@using AUTistima.Models.Enums
@{
    ViewData["Title"] = "Minhas Notifica√ß√µes";

    var perfisInfo = new (TipoPerfil Perfil, string Icon, string Cor, string Label)[]
    {
        (TipoPerfil.Mae,                  "bi-heart-fill",       "#F28B82", "M√£es At√≠picas"),
        (TipoPerfil.ProfissionalSaude,    "bi-activity",         "#0d6efd", "Prof. de Sa√∫de"),
        (TipoPerfil.ProfissionalEducacao, "bi-mortarboard-fill", "#0dcaf0", "Prof. de Educa√ß√£o"),
        (TipoPerfil.Empresa,              "bi-briefcase-fill",   "#198754", "Empresas Parceiras"),
        (TipoPerfil.Governo,              "bi-building-fill",    "#6f42c1", "Gestores P√∫blicos"),
        (TipoPerfil.Administrador,        "bi-shield-fill-check","#dc3545", "Administradores"),
    };
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-bell-fill text-primary"></i> Minhas Notifica√ß√µes
                </h2>
                @if (Model.Notificacoes.Any(n => !n.Lida))
                {
                    <form asp-action="MarcarTodasLidas" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-check-all"></i> Marcar todas como lidas
                        </button>
                    </form>
                }
            </div>

            <!-- Configura√ß√£o de Push Notifications -->
            <div class="card shadow-sm border-0 mb-4" id="push-config-card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="mb-1">
                                <i class="bi bi-phone-vibrate text-primary me-2"></i>
                                Notifica√ß√µes Push
                            </h6>
                            <small class="text-muted" id="push-status">Verificando...</small>
                        </div>
                        <div>
                            <button type="button" class="btn btn-primary btn-sm" id="btn-ativar-push" style="display:none;">
                                <i class="bi bi-bell-fill"></i> Ativar
                            </button>
                            <button type="button" class="btn btn-outline-success btn-sm" id="btn-testar-push" style="display:none;">
                                <i class="bi bi-send"></i> Testar
                            </button>
                            <span class="badge bg-success" id="push-ativo" style="display:none;">
                                <i class="bi bi-check-circle"></i> Ativo
                            </span>
                            <span class="badge bg-warning text-dark" id="push-bloqueado" style="display:none;">
                                <i class="bi bi-x-circle"></i> Bloqueado
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            @if (TempData["Mensagem"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Mensagem"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                </div>
            }

            @if (TempData["Erro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Erro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                </div>
            }

            @* ===== PAINEL EXCLUSIVO DO ADMINISTRADOR ===== *@
            @if (Model.IsAdmin)
            {
                <div class="card shadow-sm border-0 mb-4 border-start border-4 border-danger">
                    <div class="card-header bg-white py-3 d-flex align-items-center gap-2 border-bottom">
                        <i class="bi bi-megaphone-fill text-danger fs-5"></i>
                        <strong>Enviar Aviso</strong>
                        <span class="badge bg-danger ms-auto">Admin</span>
                    </div>
                    <div class="card-body">
                        <form asp-action="EnviarAvisoAdmin" method="post" id="formAvisoAdmin" novalidate>
                            @Html.AntiForgeryToken()

                            <div class="row g-3">
                                <!-- T√≠tulo -->
                                <div class="col-12">
                                    <label asp-for="EnvioAdmin.Titulo" class="form-label fw-semibold small"></label>
                                    <input asp-for="EnvioAdmin.Titulo" class="form-control form-control-sm"
                                           maxlength="100" placeholder="Ex.: Atualiza√ß√£o importante" />
                                    <span asp-validation-for="EnvioAdmin.Titulo" class="text-danger small"></span>
                                </div>

                                <!-- Mensagem -->
                                <div class="col-12">
                                    <label asp-for="EnvioAdmin.Mensagem" class="form-label fw-semibold small"></label>
                                    <textarea asp-for="EnvioAdmin.Mensagem" class="form-control form-control-sm"
                                              rows="3" maxlength="1000" id="adminMsgTxt"
                                              placeholder="Escreva a mensagem‚Ä¶"></textarea>
                                    <div class="d-flex justify-content-end mt-1">
                                        <small class="text-muted"><span id="adminMsgCont">0</span>/1000</small>
                                    </div>
                                    <span asp-validation-for="EnvioAdmin.Mensagem" class="text-danger small"></span>
                                </div>

                                <!-- Link opcional -->
                                <div class="col-12">
                                    <label asp-for="EnvioAdmin.Link" class="form-label fw-semibold small"></label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text"><i class="bi bi-link-45deg"></i></span>
                                        <input asp-for="EnvioAdmin.Link" class="form-control"
                                               placeholder="https://‚Ä¶ (opcional)" />
                                    </div>
                                </div>

                                <!-- Tipo de destino -->
                                <div class="col-12">
                                    <label class="form-label fw-semibold small">Destinat√°rios</label>
                                    <div class="d-flex flex-wrap gap-2 mb-2">

                                        <input type="radio" class="btn-check" name="EnvioAdmin.TipoDestino"
                                               id="adTodos" value="Todos" checked />
                                        <label class="btn btn-outline-secondary btn-sm" for="adTodos">
                                            <i class="bi bi-people me-1"></i>Todos
                                            <span class="badge bg-secondary ms-1">@Model.TotalUsuariosAtivos</span>
                                        </label>

                                        <input type="radio" class="btn-check" name="EnvioAdmin.TipoDestino"
                                               id="adPerfil" value="Perfil" />
                                        <label class="btn btn-outline-primary btn-sm" for="adPerfil">
                                            <i class="bi bi-person-badge me-1"></i>Por grupo
                                        </label>

                                        <input type="radio" class="btn-check" name="EnvioAdmin.TipoDestino"
                                               id="adSelecionados" value="Selecionados" />
                                        <label class="btn btn-outline-warning btn-sm" for="adSelecionados">
                                            <i class="bi bi-person-check me-1"></i>Espec√≠ficos
                                        </label>
                                    </div>

                                    <!-- Sele√ß√£o de grupo -->
                                    <div id="adPainelPerfil" style="display:none" class="mb-2">
                                        <label asp-for="EnvioAdmin.PerfilDestino" class="form-label small"></label>
                                        <select asp-for="EnvioAdmin.PerfilDestino" class="form-select form-select-sm">
                                            <option value="">‚Äî selecione o grupo ‚Äî</option>
                                            @foreach (var (perfil, _, _, label) in perfisInfo)
                                            {
                                                var cnt = Model.ContagemPorPerfil.TryGetValue(perfil, out var c) ? c : 0;
                                                <option value="@perfil">@label (@cnt)</option>
                                            }
                                        </select>
                                        <span asp-validation-for="EnvioAdmin.PerfilDestino" class="text-danger small"></span>
                                    </div>

                                    <!-- Sele√ß√£o de usu√°rios por grupo -->
                                    <div id="adPainelSelecionados" style="display:none" class="mb-2">
                                        <!-- Selecionar grupo primeiro -->
                                        <label class="form-label small fw-semibold">Selecione o grupo</label>
                                        <select id="adGrupoFiltro" class="form-select form-select-sm mb-2">
                                            <option value="">‚Äî todos os usu√°rios ‚Äî</option>
                                            @foreach (var (perfil, _, _, label) in perfisInfo)
                                            {
                                                var cnt = Model.ContagemPorPerfil.TryGetValue(perfil, out var c) ? c : 0;
                                                <option value="@((int)perfil)">@label (@cnt)</option>
                                            }
                                        </select>

                                        <label class="form-label small fw-semibold">Usu√°rios</label>
                                        <select name="EnvioAdmin.UsuariosSelecionados"
                                                class="form-select form-select-sm"
                                                multiple size="6"
                                                id="adSelectUsuarios">
                                            @foreach (var (perfil, _, _, _) in perfisInfo)
                                            {
                                                if (Model.UsuariosPorPerfil.TryGetValue(perfil, out var lista))
                                                {
                                                    <optgroup label="@(perfisInfo.First(p => p.Perfil == perfil).Label)" data-grupo="@((int)perfil)">
                                                        @foreach (var item in lista)
                                                        {
                                                            <option value="@item.Value">@item.Text</option>
                                                        }
                                                    </optgroup>
                                                }
                                            }
                                        </select>
                                        <div class="form-text">Segure <kbd>Ctrl</kbd>/<kbd>‚åò</kbd> para selecionar v√°rios.</div>
                                        <span asp-validation-for="EnvioAdmin.UsuariosSelecionados" class="text-danger small"></span>
                                    </div>

                                    <span asp-validation-for="EnvioAdmin.TipoDestino" class="text-danger small"></span>
                                </div>

                                <!-- Bot√£o -->
                                <div class="col-12 d-flex gap-2">
                                    <button type="submit" class="btn btn-danger btn-sm px-4"
                                            onclick="return confirmarEnvioAdmin()">
                                        <i class="bi bi-send me-1"></i>Enviar aviso
                                    </button>
                                    <button type="reset" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-x me-1"></i>Limpar
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            }

            @if (Model.PodeEnviarEntrePerfis)
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-send text-primary me-2"></i>
                            Enviar notifica√ß√£o
                        </h5>
                        <p class="text-muted small mb-3">
                            Voc√™ pode enviar notifica√ß√µes apenas para @Model.PerfilDestinatarioLabel.
                        </p>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="ModelOnly" class="alert alert-warning small mb-3"></div>
                        }

                        <form asp-action="EnviarEntreMaeESaude" method="post" class="row g-2 g-md-3">
                            <div class="col-12">
                                <label asp-for="Envio.DestinatarioId" class="form-label"></label>
                                <select asp-for="Envio.DestinatarioId"
                                        asp-items="Model.DestinatariosDisponiveis"
                                        class="form-select form-select-sm">
                                    <option value="">Selecione...</option>
                                </select>
                                <span asp-validation-for="Envio.DestinatarioId" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Envio.Titulo" class="form-label"></label>
                                <input asp-for="Envio.Titulo" class="form-control form-control-sm" maxlength="100" />
                                <span asp-validation-for="Envio.Titulo" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Envio.Mensagem" class="form-label"></label>
                                <textarea asp-for="Envio.Mensagem" rows="3" class="form-control form-control-sm" maxlength="500"></textarea>
                                <span asp-validation-for="Envio.Mensagem" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Envio.Link" class="form-label"></label>
                                <input asp-for="Envio.Link" class="form-control form-control-sm" maxlength="255" placeholder="Ex.: /Chat/Conversa/123" />
                                <span asp-validation-for="Envio.Link" class="text-danger small"></span>
                            </div>

                            <div class="col-12 d-grid d-md-flex justify-content-md-end">
                                <button type="submit" class="btn btn-primary btn-sm px-4">
                                    <i class="bi bi-send"></i> Enviar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            }

            @if (!Model.Notificacoes.Any())
            {
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-bell-slash display-1 text-muted"></i>
                        <h4 class="mt-3 text-muted">Nenhuma notifica√ß√£o</h4>
                        <p class="text-muted">Voc√™ est√° em dia! üíï</p>
                        <a href="/" class="btn btn-primary mt-3">
                            <i class="bi bi-house"></i> Voltar ao in√≠cio
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="list-group shadow-sm">
                    @foreach (var notificacao in Model.Notificacoes)
                    {
                        var bgClass = notificacao.Lida ? "" : "bg-light";
                        var iconClass = notificacao.Tipo switch
                        {
                            TipoNotificacao.Acolhimento => "bi-heart-fill text-danger",
                            TipoNotificacao.Comentario => "bi-chat-dots-fill text-info",
                            TipoNotificacao.Mensagem => "bi-envelope-fill text-primary",
                            TipoNotificacao.ManejoValidado => "bi-check-circle-fill text-success",
                            TipoNotificacao.NovaOportunidade => "bi-briefcase-fill text-warning",
                            TipoNotificacao.Lembrete => "bi-alarm-fill text-secondary",
                            TipoNotificacao.BoasVindas => "bi-stars text-warning",
                            _ => "bi-bell-fill text-primary"
                        };
                        
                        <div class="list-group-item list-group-item-action @bgClass">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="d-flex align-items-start">
                                    <div class="me-3">
                                        <i class="bi @iconClass fs-4"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">
                                            @notificacao.Titulo
                                            @if (!notificacao.Lida)
                                            {
                                                <span class="badge bg-primary ms-2">Nova</span>
                                            }
                                        </h6>
                                        <p class="mb-1 text-muted">@notificacao.Mensagem</p>
                                        <small class="text-muted">
                                            <i class="bi bi-clock"></i>
                                            @notificacao.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                </div>
                                <div class="btn-group flex-shrink-0">
                                    @if (!notificacao.Lida)
                                    {
                                        <form asp-action="MarcarLida" asp-route-id="@notificacao.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Marcar como lida">
                                                <i class="bi bi-check"></i>
                                            </button>
                                        </form>
                                    }
                                    <form asp-action="Excluir" asp-route-id="@notificacao.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Excluir" onclick="event.preventDefault(); confirmarExclusao(this.closest('form'), 'Excluir esta notifica√ß√£o?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                @if (Model.Notificacoes.Count >= 10)
                {
                    <div class="text-center mt-4">
                        <form asp-action="LimparTodas" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm" onclick="event.preventDefault(); confirmarExclusao(this.closest('form'), 'Tem certeza que deseja limpar todas as notifica√ß√µes?')">
                                <i class="bi bi-trash"></i> Limpar todas
                            </button>
                        </form>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Atualiza badge de notifica√ß√µes
        function atualizarBadge() {
            fetch('/Notificacoes/NaoLidas')
                .then(r => r.json())
                .then(data => {
                    const badge = document.getElementById('notificacao-badge');
                    if (badge) {
                        badge.textContent = data.count;
                        badge.style.display = data.count > 0 ? 'inline' : 'none';
                    }
                });
        }
        
        // Atualiza a cada 30 segundos
        setInterval(atualizarBadge, 30000);
        
        // Gerenciar Push Notifications
        document.addEventListener('DOMContentLoaded', async () => {
            const statusEl = document.getElementById('push-status');
            const btnAtivar = document.getElementById('btn-ativar-push');
            const btnTestar = document.getElementById('btn-testar-push');
            const badgeAtivo = document.getElementById('push-ativo');
            const badgeBloqueado = document.getElementById('push-bloqueado');
            
            if (!('Notification' in window) || !('serviceWorker' in navigator)) {
                statusEl.textContent = 'Seu navegador n√£o suporta notifica√ß√µes push';
                return;
            }
            
            const permission = Notification.permission;
            
            if (permission === 'granted') {
                statusEl.textContent = 'Notifica√ß√µes ativadas neste dispositivo';
                badgeAtivo.style.display = 'inline';
                btnTestar.style.display = 'inline-block';
                
                // Tentar registrar subscription se ainda n√£o existir
                try {
                    await window.PushManager?.subscribe();
                } catch (e) {
                    console.log('Subscription j√° existe ou erro:', e);
                }
            } else if (permission === 'denied') {
                statusEl.textContent = 'Notifica√ß√µes bloqueadas. Altere nas configura√ß√µes do navegador.';
                badgeBloqueado.style.display = 'inline';
            } else {
                statusEl.textContent = 'Receba notifica√ß√µes mesmo quando n√£o estiver no site';
                btnAtivar.style.display = 'inline-block';
            }
            
            // Bot√£o Ativar
            btnAtivar.addEventListener('click', async () => {
                btnAtivar.disabled = true;
                btnAtivar.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Ativando...';
                
                try {
                    const result = await window.PushManager?.requestPermission();
                    if (result === 'granted') {
                        statusEl.textContent = 'Notifica√ß√µes ativadas!';
                        badgeAtivo.style.display = 'inline';
                        btnAtivar.style.display = 'none';
                        btnTestar.style.display = 'inline-block';
                    } else {
                        statusEl.textContent = 'Permiss√£o negada';
                        badgeBloqueado.style.display = 'inline';
                        btnAtivar.style.display = 'none';
                    }
                } catch (e) {
                    statusEl.textContent = 'Erro ao ativar: ' + e.message;
                    btnAtivar.disabled = false;
                    btnAtivar.innerHTML = '<i class="bi bi-bell-fill"></i> Ativar';
                }
            });
            
            // Bot√£o Testar
            btnTestar.addEventListener('click', async () => {
                btnTestar.disabled = true;
                btnTestar.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
                
                try {
                    const response = await fetch('/Notificacoes/TestarPush', { method: 'POST' });
                    const data = await response.json();
                    
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Sucesso! üíï',
                            text: data.message,
                            confirmButtonColor: '#F28B82'
                        });
                    } else {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Aten√ß√£o',
                            text: data.message,
                            confirmButtonColor: '#F28B82'
                        });
                    }
                } catch (e) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Ops!',
                        text: 'Erro: ' + e.message,
                        confirmButtonColor: '#F28B82'
                    });
                }
                
                btnTestar.disabled = false;
                btnTestar.innerHTML = '<i class="bi bi-send"></i> Testar';
            });
        });

        // ===== JS do painel admin =====
        function confirmarEnvioAdmin() {
            const radPerfil = document.getElementById('adPerfil');
            const radSelic = document.getElementById('adSelecionados');
            const radTodos = document.getElementById('adTodos');
            if (!radTodos) return true;
            if (radPerfil?.checked) {
                const sel = document.querySelector('[name="EnvioAdmin.PerfilDestino"]');
                if (!sel?.value) { alert('Selecione o grupo de destino.'); return false; }
            }
            if (radSelic?.checked) {
                const algum = document.querySelector('#adSelectUsuarios option:checked');
                if (!algum) { alert('Selecione ao menos um usu√°rio.'); return false; }
            }
            return confirm('Confirma o envio do aviso?');
        }

        (function () {
            const radTodos = document.getElementById('adTodos');
            const radPerfil = document.getElementById('adPerfil');
            const radSelic = document.getElementById('adSelecionados');
            const painelPerfil = document.getElementById('adPainelPerfil');
            const painelSelic = document.getElementById('adPainelSelecionados');
            const grupoFiltro = document.getElementById('adGrupoFiltro');
            const selectUsuarios = document.getElementById('adSelectUsuarios');
            const msgTxt = document.getElementById('adminMsgTxt');
            const msgCont = document.getElementById('adminMsgCont');

            if (!radTodos) return; // n√£o √© admin

            // Contador de caracteres
            if (msgTxt && msgCont) {
                msgTxt.addEventListener('input', () => { msgCont.textContent = msgTxt.value.length; });
            }

            function atualizarPaineis() {
                if (painelPerfil) painelPerfil.style.display = radPerfil?.checked ? '' : 'none';
                if (painelSelic) painelSelic.style.display = radSelic?.checked ? '' : 'none';
            }

            [radTodos, radPerfil, radSelic].forEach(r => r?.addEventListener('change', atualizarPaineis));

            // Filtrar lista de usu√°rios pelo grupo selecionado
            if (grupoFiltro && selectUsuarios) {
                grupoFiltro.addEventListener('change', () => {
                    const grupoVal = grupoFiltro.value;
                    selectUsuarios.querySelectorAll('optgroup').forEach(og => {
                        const visivel = !grupoVal || og.dataset.grupo === grupoVal;
                        og.style.display = visivel ? '' : 'none';
                        og.querySelectorAll('option').forEach(opt => {
                            if (!visivel) opt.selected = false;
                        });
                    });
                });
            }

            atualizarPaineis();
        })();
    </script>
}
