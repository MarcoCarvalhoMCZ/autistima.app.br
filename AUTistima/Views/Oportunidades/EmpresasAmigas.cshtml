@model IEnumerable<AUTistima.Models.ApplicationUser>
@{
    ViewData["Title"] = "Empresas Amigas";
    if (!User.Identity?.IsAuthenticated ?? true)
    {
        Layout = "~/Views/Home/_LayoutHome.cshtml";
    }
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h1><i class="bi bi-building-heart text-salmon me-2"></i>Empresas Amigas</h1>
            <p class="text-muted mb-0">Empresas comprometidas com a inclusão e apoio à causa autista.</p>
        </div>
    </div>

    <!-- Lista de Empresas -->
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var empresa in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm hover-card">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                @if (!string.IsNullOrEmpty(empresa.FotoPerfilUrl))
                                {
                                    <img src="@empresa.FotoPerfilUrl" alt="@empresa.NomeCompleto" 
                                         class="rounded-circle object-fit-cover" 
                                         style="width: 100px; height: 100px; border: 3px solid var(--color-salmon-light);">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto" 
                                         style="width: 100px; height: 100px; border: 3px solid var(--color-salmon-light);">
                                        <i class="bi bi-building fs-1 text-muted"></i>
                                    </div>
                                }
                            </div>
                            
                            <h5 class="card-title fw-bold mb-1">@empresa.NomeCompleto</h5>
                            
                            @if (!string.IsNullOrEmpty(empresa.Cidade))
                            {
                                <p class="text-muted small mb-3">
                                    <i class="bi bi-geo-alt-fill me-1"></i>@empresa.Cidade/@empresa.Estado
                                </p>
                            }

                            <div class="d-flex justify-content-center gap-2 mt-3">
                                <span class="badge bg-salmon-light text-salmon rounded-pill px-3 py-2">
                                    <i class="bi bi-star-fill me-1"></i>Empresa Amiga
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-building-dash text-muted" style="font-size: 3rem;"></i>
            </div>
            <h4>Nenhuma empresa encontrada</h4>
            <p class="text-muted">Ainda não temos empresas cadastradas como parceiras nesta lista.</p>
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>