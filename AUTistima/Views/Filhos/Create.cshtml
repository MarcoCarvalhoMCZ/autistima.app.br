@model AUTistima.Models.Child
@{
    ViewData["Title"] = "Cadastrar Filho(a)";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Meus Filhos</a></li>
            <li class="breadcrumb-item active" aria-current="page">Cadastrar</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-salmon text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus me-2"></i>
                        Cadastrar Filho(a)
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info border-0 mb-4">
                        <i class="bi bi-shield-check me-2"></i>
                        <strong>Privacidade:</strong> Esses dados são confidenciais e serão usados apenas 
                        para personalizar sua experiência e os manejos sugeridos.
                    </div>

                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="EscolaNome" />
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Nome" class="form-label fw-semibold">Nome *</label>
                                <input asp-for="Nome" class="form-control" placeholder="Nome do(a) filho(a)" />
                                <span asp-validation-for="Nome" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DataNascimento" class="form-label fw-semibold">Data de Nascimento</label>
                                <input asp-for="DataNascimento" type="date" class="form-control" />
                                <span asp-validation-for="DataNascimento" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="NivelSuporte" class="form-label fw-semibold">Nível de Suporte</label>
                                <select asp-for="NivelSuporte" asp-items="Html.GetEnumSelectList<AUTistima.Models.Enums.NivelSuporte>()" class="form-select">
                                    <option value="">Selecione...</option>
                                </select>
                                <div class="form-text">
                                    <small>Nível 1 = menor suporte, Nível 3 = maior suporte</small>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-check">
                                    <input asp-for="PossuiDiagnostico" class="form-check-input" type="checkbox" />
                                    <label asp-for="PossuiDiagnostico" class="form-check-label">
                                        Possui diagnóstico formal de TEA
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DataDiagnostico" class="form-label fw-semibold">Data do Diagnóstico</label>
                                <input asp-for="DataDiagnostico" type="date" class="form-control" />
                                <span asp-validation-for="DataDiagnostico" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="EscolaNome" class="form-label fw-semibold">Escola</label>
                                <select asp-for="EscolaId" class="form-select" onchange="updateEscolaNome()">
                                    <option value="">Selecione a escola (opcional)</option>
                                    @{
                                        var escolas = ViewBag.Escolas as List<AUTistima.Models.School> ?? new List<AUTistima.Models.School>();
                                        foreach (var escola in escolas)
                                        {
                                            <option value="@escola.Id">@escola.Nome - @escola.Cidade</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="EscolaId" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <div class="form-check">
                                    <input asp-for="PossuiPAE" class="form-check-input" type="checkbox" />
                                    <label asp-for="PossuiPAE" class="form-check-label">
                                        Possui PAE (Plano de Atendimento Educacional Individualizado)
                                    </label>
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="EstrategiasCrise" class="form-label fw-semibold">
                                    <i class="bi bi-heart-pulse me-1"></i>
                                    Estratégias para Momentos de Crise
                                </label>
                                <textarea asp-for="EstrategiasCrise" class="form-control" rows="4" 
                                    placeholder="O que funciona para acalmar? Músicas, objetos, ambientes..."></textarea>
                                <span asp-validation-for="EstrategiasCrise" class="text-danger small"></span>
                                <div class="form-text">
                                    Essas informações podem ajudar profissionais de saúde e educação em situações de emergência.
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="Observacoes" class="form-label fw-semibold">Observações Adicionais</label>
                                <textarea asp-for="Observacoes" class="form-control" rows="3" 
                                    placeholder="Informações adicionais que considere importantes..."></textarea>
                                <span asp-validation-for="Observacoes" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-salmon">
                                <i class="bi bi-check-lg me-1"></i>
                                Cadastrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function updateEscolaNome() {
            const select = document.querySelector('select[asp-for="EscolaId"]');
            const selectedOption = select.options[select.selectedIndex];
            const escolaNome = selectedOption.text;
            document.querySelector('input[asp-for="EscolaNome"]').value = escolaNome === 'Selecione a escola (opcional)' ? '' : escolaNome;
        }
    </script>
}
