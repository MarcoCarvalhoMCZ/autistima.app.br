@using AUTistima.Models.Enums
@using System.Linq

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="AUTistima - Rede de afeto e política pública digital para mães atípicas, profissionais de saúde/educação e empresas." />
    <meta name="theme-color" content="#F28B82" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="AUTistima" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="application-name" content="AUTistima" />
    <meta name="msapplication-TileColor" content="#F28B82" />
    <meta name="msapplication-config" content="/browserconfig.xml" />
    <title>@ViewData["Title"] - AUTistima</title>
    
    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />
    
    <!-- Favicon e Apple Touch Icons -->
    <link rel="icon" type="image/svg+xml" href="/icons/icon.svg" />
    <link rel="apple-touch-icon" href="/icons/icon-192x192.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/icons/icon-152x152.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/icons/icon-192x192.png" />
    <link rel="apple-touch-icon" sizes="167x167" href="/icons/icon-192x192.png" />
    
    <!-- Google Fonts - Inter para acessibilidade -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AUTistima.styles.css" asp-append-version="true" />
    
    <style>
        :root {
            --color-salmon: #F28B82;
            --color-azul: #AECBFA;
            --color-ink: #1A1F2B;
        }

        body {
            font-family: 'Inter', sans-serif;
        }

        .navbar-home {
            background: #fff;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
            padding: 0.75rem 0;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1030;
        }

        main#main-content {
            padding-top: 70px;
        }

        .navbar-home .navbar-brand {
            font-weight: 700;
            font-size: 1.35rem;
            color: var(--color-ink) !important;
        }

        .navbar-home .navbar-brand span {
            color: var(--color-salmon);
        }
    </style>
</head>
<body>
    <!-- Skip link para acessibilidade -->
    <a href="#main-content" class="skip-link">Pular para o conteúdo principal</a>
    
    @inject Microsoft.AspNetCore.Identity.UserManager<AUTistima.Models.ApplicationUser> UserManager
    @{
        var currentUser = await UserManager.GetUserAsync(User);
    }
    
    <!-- Header Simples para Home (sem sidebar) -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-home">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="" height="35" onerror="this.style.display='none'" style="margin-right: 10px;">
                    <span>AUT</span>istima
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Sobre">Sobre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Glossario" asp-action="Index">Mini Dicionário</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Saude" asp-action="Index">Profissionais</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contato">Contato</a>
                        </li>
                    </ul>
                    
                    <div class="d-flex gap-2 ms-3">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a class="btn btn-outline-salmon btn-sm" asp-controller="Account" asp-action="Logout" onclick="document.getElementById('logout-form').submit(); return false;">
                                <i class="bi bi-box-arrow-right me-1"></i> Sair
                            </a>
                            <form id="logout-form" asp-controller="Account" asp-action="Logout" method="post" style="display:none;"></form>
                        }
                        else
                        {
                            <a class="btn btn-outline-salmon btn-sm" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Entrar
                            </a>
                            <a class="btn btn-salmon btn-sm d-none d-md-inline-block" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-heart me-1"></i> Faça Parte
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" id="main-content">
        @RenderBody()
    </main>

    <footer class="footer-autistima">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5>
                        <span style="color: var(--color-salmon);">AUT</span>istima
                    </h5>
                    <p class="mb-2">Política pública em forma de afeto.</p>
                    <p class="small">Uma rede de apoio para mães atípicas, profissionais e empresas comprometidas com a inclusão.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h6>Links Úteis</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Sobre">Sobre o Projeto</a></li>
                        <li><a asp-controller="Glossario" asp-action="Index">Mini Dicionário</a></li>
                        <li><a asp-controller="Saude" asp-action="Index">Encontrar Profissionais</a></li>
                        <li><a asp-controller="Home" asp-action="Contato">Contato</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h6>Precisa de Ajuda?</h6>
                    <p class="small">
                        CVV - Centro de Valorização da Vida<br>
                        <strong>Ligue 188</strong> (24 horas)
                    </p>
                    <p class="small">
                        CAPS - Centro de Atenção Psicossocial<br>
                        Procure a unidade mais próxima
                    </p>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-6">
                    <p class="small mb-0">&copy; 2025 AUTistima. Todos os direitos reservados.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-controller="Home" asp-action="Privacidade" class="small me-3">Política de Privacidade</a>
                    <a asp-controller="Home" asp-action="Termos" class="small">Termos de Uso</a>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- SweetAlert2 - Funções Globais -->
    <script>
        function confirmarExclusao(form, mensagem = 'Tem certeza que deseja excluir?') {
            Swal.fire({
                title: 'Confirmar Exclusão',
                text: mensagem,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#F28B82',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sim, excluir!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
            return false;
        }

        function toastSucesso(mensagem) {
            Swal.fire({
                icon: 'success',
                title: mensagem,
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true
            });
        }
    </script>
    
    <!-- PWA Service Worker -->
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', async () => {
                try {
                    const registration = await navigator.serviceWorker.register('/service-worker.js', {
                        scope: '/'
                    });
                    console.log('✅ Service Worker registrado:', registration.scope);
                } catch (error) {
                    console.error('❌ Erro ao registrar Service Worker:', error);
                }
            });
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
