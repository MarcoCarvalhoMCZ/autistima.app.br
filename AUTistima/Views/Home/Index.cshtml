@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    const pwaSection = document.getElementById('pwa-install-section');
    const pwaFab = document.getElementById('pwa-fab');
    const pwaFabBtn = document.getElementById('pwa-fab-btn');
    const installBtn = document.getElementById('pwa-install-btn');
    const oneClickDiv = document.getElementById('pwa-one-click');
    const iosInstructions = document.getElementById('pwa-ios-instructions');
    const androidInstructions = document.getElementById('pwa-android-instructions');
    const desktopInstructions = document.getElementById('pwa-desktop-instructions');
    
    // Verificar se já está instalado como PWA
    const isStandalone = window.matchMedia('(display-mode: standalone)').matches 
        || window.navigator.standalone 
        || document.referrer.includes('android-app://');
    
    // Verificar se foi dispensado recentemente
    const dismissedTime = localStorage.getItem('pwa-install-dismissed');
    const daysSinceDismissed = dismissedTime 
        ? (new Date() - new Date(dismissedTime)) / (1000 * 60 * 60 * 24) 
        : 999;
    
    if (isStandalone || daysSinceDismissed < 7) {
        return; // Não mostrar se instalado ou dispensado
    }
    
    // Detectar dispositivo
    const userAgent = navigator.userAgent || navigator.vendor || window.opera;
    const isIOS = /iPad|iPhone|iPod/.test(userAgent) && !window.MSStream;
    const isAndroid = /android/i.test(userAgent);
    const isMobile = isIOS || isAndroid;
    
    // Mostrar instruções específicas (fallback)
    if (isIOS) {
        iosInstructions.style.display = 'block';
        pwaSection.style.display = 'block';
    } else if (isAndroid) {
        androidInstructions.style.display = 'block';
        pwaSection.style.display = 'block';
    } else if (!isMobile) {
        desktopInstructions.style.display = 'block';
        pwaSection.style.display = 'block';
    }
    
    // Função de instalação
    async function triggerInstall() {
        if (window.deferredPrompt) {
            window.deferredPrompt.prompt();
            const { outcome } = await window.deferredPrompt.userChoice;
            
            if (outcome === 'accepted') {
                console.log('🎉 PWA instalado com sucesso!');
                pwaSection.style.display = 'none';
                pwaFab.style.display = 'none';
            }
            
            window.deferredPrompt = null;
        }
    }
    
    // Capturar evento de instalação nativa (Chrome/Edge/Samsung Internet)
    window.addEventListener('beforeinstallprompt', function(e) {
        e.preventDefault();
        window.deferredPrompt = e;
        
        // Mostrar botão de instalação com 1 clique
        oneClickDiv.style.display = 'block';
        pwaSection.style.display = 'block';
        
        // Mostrar botão flutuante
        pwaFab.style.display = 'block';
        
        // Ocultar instruções manuais se tiver prompt nativo
        iosInstructions.style.display = 'none';
        androidInstructions.style.display = 'none';
        desktopInstructions.style.display = 'none';
        
        console.log('✅ Instalação com 1 clique disponível!');
    });
    
    // Evento de clique no botão instalar (banner)
    installBtn.addEventListener('click', triggerInstall);
    
    // Evento de clique no botão flutuante
    pwaFabBtn.addEventListener('click', triggerInstall);
    
    // Detectar instalação concluída
    window.addEventListener('appinstalled', function() {
        pwaSection.style.display = 'none';
        pwaFab.style.display = 'none';
        localStorage.setItem('pwa-installed', 'true');
        console.log('🎉 AUTistima foi instalado com sucesso!');
    });
});

// Dispensar banner por 7 dias
function dismissPwaInstall() {
    localStorage.setItem('pwa-install-dismissed', new Date().toISOString());
    document.getElementById('pwa-install-section').style.display = 'none';
    document.getElementById('pwa-fab').style.display = 'none';
}
</script>
}
