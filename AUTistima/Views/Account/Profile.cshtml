@model AUTistima.ViewModels.ProfileViewModel
@using AUTistima.Models.Enums
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Meu Perfil";
    var estados = new[] { "AC", "AL", "AP", "AM", "BA", "CE", "DF", "ES", "GO", "MA", "MT", "MS", "MG", "PA", "PB", "PR", "PE", "PI", "RJ", "RN", "RS", "RO", "RR", "SC", "SP", "SE", "TO" };
}

<div class="container py-4">
    <!-- Conte√∫do de Ajuda -->
    <div id="page-help-content" class="d-none">
        <div class="help-step">
            <div class="help-step-number">1</div>
            <div class="help-step-content">
                <h6>Sua Foto</h6>
                <p>Clique no √≠cone de c√¢mera <i class="bi bi-camera-fill"></i> sobre sua foto para escolher uma imagem nova.</p>
            </div>
        </div>
        <div class="help-step">
            <div class="help-step-number">2</div>
            <div class="help-step-content">
                <h6>Seus Dados</h6>
                <p>Mantenha seu telefone e endere√ßo atualizados para receber informa√ß√µes relevantes da sua regi√£o.</p>
            </div>
        </div>
        <div class="help-step">
            <div class="help-step-number">3</div>
            <div class="help-step-content">
                <h6>Seguran√ßa</h6>
                <p>Use o bot√£o "Alterar Senha" no menu lateral esquerdo se precisar trocar sua senha de acesso.</p>
            </div>
        </div>
        <div class="help-step">
            <div class="help-step-number">4</div>
            <div class="help-step-content">
                <h6>Salvar</h6>
                <p>N√£o esque√ßa de clicar no bot√£o "Salvar Altera√ß√µes" no final da p√°gina ap√≥s editar seus dados.</p>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Coluna Lateral -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="position-relative d-inline-block mb-3">
                        @if (!string.IsNullOrEmpty(Model.FotoPerfilUrl))
                        {
                            <img src="@Model.FotoPerfilUrl" alt="@Model.NomeCompleto" class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover; border: 3px solid #F28B82;" />
                        }
                        else
                        {
                            <div class="avatar-large bg-salmon text-white mx-auto" style="width: 100px; height: 100px; font-size: 2.5rem; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                @(Model.NomeCompleto?.Substring(0, 1).ToUpper() ?? "U")
                            </div>
                        }
                        <form asp-action="UploadFoto" method="post" enctype="multipart/form-data" style="position: absolute; bottom: 0; right: 0;">
                            @Html.AntiForgeryToken()
                            <label for="fotoPerfilFile" class="btn btn-sm btn-salmon rounded-circle m-0" style="width: 32px; height: 32px; padding: 4px; cursor: pointer;" title="Alterar foto">
                                <i class="bi bi-camera-fill" style="font-size: 0.9rem;"></i>
                            </label>
                            <input type="file" id="fotoPerfilFile" name="fotoPerfilFile" accept="image/*" style="display: none;" onchange="this.form.submit()" />
                        </form>
                    </div>
                    <h4 class="fw-bold mb-1">@Model.NomeCompleto</h4>
                    <p class="text-muted mb-2">
                        @switch (Model.TipoPerfil)
                        {
                            case TipoPerfil.Administrador: <text>‚öôÔ∏è Administrador</text> break;
                            case TipoPerfil.Mae: <text>üë© M√£e At√≠pica</text> break;
                            case TipoPerfil.ProfissionalSaude: <text>ü©∫ Profissional de Sa√∫de</text> break;
                            case TipoPerfil.ProfissionalEducacao: <text>üìö Profissional de Educa√ß√£o</text> break;
                            case TipoPerfil.Empresa: <text>üè¢ Empresa</text> break;
                            case TipoPerfil.Governo: <text>üèõÔ∏è Governo</text> break;
                        }
                    </p>
                    <p class="mb-0"><i class="bi bi-envelope me-1"></i> @Model.Email</p>
                    @if (!string.IsNullOrEmpty(Model.Cidade))
                    {
                        <p class="text-muted mb-0 small mt-1">
                            <i class="bi bi-geo-alt me-1"></i>@Model.Cidade@(!string.IsNullOrEmpty(Model.Estado) ? $" - {Model.Estado}" : "")
                        </p>
                    }
                </div>
            </div>
            
            <!-- A√ß√µes R√°pidas -->
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-body">
                    <h6 class="text-muted mb-3"><i class="bi bi-lightning me-2"></i>A√ß√µes R√°pidas</h6>
                    <div class="d-grid gap-2">
                        <a asp-action="ChangePassword" class="btn btn-outline-secondary">
                            <i class="bi bi-key me-2"></i>Alterar Senha
                        </a>
                        @if (Model.TipoPerfil == TipoPerfil.Mae)
                        {
                            <a asp-controller="Filhos" asp-action="Index" class="btn btn-outline-salmon">
                                <i class="bi bi-people me-2"></i>Meus Filhos
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Formul√°rio de Edi√ß√£o -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-salmon text-white">
                    <h5 class="mb-0"><i class="bi bi-pencil me-2"></i>Editar Perfil</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Profile" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="TipoPerfil" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Dados B√°sicos -->
                        <h6 class="text-muted border-bottom pb-2 mb-3">
                            <i class="bi bi-person-circle me-2"></i>Dados B√°sicos
                        </h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="NomeCompleto" class="form-label"></label>
                                <input asp-for="NomeCompleto" class="form-control" />
                                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="(00) 00000-0000" />
                            </div>
                            <div class="col-12">
                                <label asp-for="SobreMim" class="form-label"></label>
                                <textarea asp-for="SobreMim" class="form-control" rows="3" placeholder="Conte um pouco sobre voc√™..."></textarea>
                            </div>
                        </div>

                        <!-- Dados Pessoais -->
                        <h6 class="text-muted border-bottom pb-2 mb-3">
                            <i class="bi bi-card-text me-2"></i>Dados Pessoais
                        </h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label asp-for="DataNascimento" class="form-label"></label>
                                <input asp-for="DataNascimento" class="form-control" type="date" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="CPF" class="form-label"></label>
                                <input asp-for="CPF" class="form-control" placeholder="000.000.000-00" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="RG" class="form-label"></label>
                                <input asp-for="RG" class="form-control" />
                            </div>
                        </div>

                        <!-- Endere√ßo -->
                        <h6 class="text-muted border-bottom pb-2 mb-3">
                            <i class="bi bi-geo-alt me-2"></i>Endere√ßo
                        </h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-3">
                                <label asp-for="CEP" class="form-label"></label>
                                <input asp-for="CEP" class="form-control" placeholder="00000-000" id="cep" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Endereco" class="form-label"></label>
                                <input asp-for="Endereco" class="form-control" id="endereco" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="NumeroEndereco" class="form-label"></label>
                                <input asp-for="NumeroEndereco" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Complemento" class="form-label"></label>
                                <input asp-for="Complemento" class="form-control" placeholder="Apto, bloco, etc." />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Bairro" class="form-label"></label>
                                <input asp-for="Bairro" class="form-control" id="bairro" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Cidade" class="form-label"></label>
                                <input asp-for="Cidade" class="form-control" id="cidade" />
                            </div>
                            <div class="col-md-1">
                                <label asp-for="Estado" class="form-label"></label>
                                <select asp-for="Estado" class="form-select" id="estado">
                                    <option value="">UF</option>
                                    @foreach (var uf in estados)
                                    {
                                        <option value="@uf">@uf</option>
                                    }
                                </select>
                            </div>
                        </div>

                        @if (Model.TipoPerfil == TipoPerfil.Empresa)
                        {
                            <!-- Dados da Empresa -->
                            <h6 class="text-muted border-bottom pb-2 mb-3">
                                <i class="bi bi-building me-2"></i>Dados da Empresa
                            </h6>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label asp-for="NomeEmpresa" class="form-label"></label>
                                    <input asp-for="NomeEmpresa" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="CNPJ" class="form-label"></label>
                                    <input asp-for="CNPJ" class="form-control" placeholder="00.000.000/0000-00" />
                                </div>
                            </div>
                        }

                        @if (Model.TipoPerfil == TipoPerfil.ProfissionalSaude || Model.TipoPerfil == TipoPerfil.ProfissionalEducacao)
                        {
                            <!-- Dados do Profissional -->
                            <h6 class="text-muted border-bottom pb-2 mb-3">
                                <i class="bi bi-person-badge me-2"></i>Dados Profissionais
                            </h6>
                            <div class="row g-3 mb-4">
                                @if (Model.TipoPerfil == TipoPerfil.ProfissionalSaude)
                                {
                                    <div class="col-md-6">
                                        <label asp-for="RegistroProfissional" class="form-label fw-semibold">Registro Profissional *</label>
                                        <input asp-for="RegistroProfissional" class="form-control" placeholder="Ex: CRM 12345/AL, CRP 00000/00" />
                                        <small class="text-muted">Registro do conselho de classe (obrigat√≥rio)</small>
                                    </div>
                                }
                                @if (Model.TipoPerfil == TipoPerfil.ProfissionalEducacao)
                                {
                                    <div class="col-md-6">
                                        <label asp-for="MatriculaProfissional" class="form-label fw-semibold">Matr√≠cula Profissional</label>
                                        <input asp-for="MatriculaProfissional" class="form-control" placeholder="Ex: MAT-2024-001234" />
                                        <small class="text-muted">Matr√≠cula ou registro na secretaria de educa√ß√£o</small>
                                    </div>
                                }
                                <div class="col-md-6">
                                    <label asp-for="EspecialidadeId" class="form-label fw-semibold">Especialidade *</label>
                                    <select asp-for="EspecialidadeId" class="form-select" asp-items="@(new SelectList((IEnumerable<AUTistima.Models.EspecialidadeProfissional>)ViewBag.Especialidades, "Id", "Nome"))">
                                        <option value="">Selecione...</option>
                                    </select>
                                </div>
                            </div>
                        }

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-salmon">
                                <i class="bi bi-check-lg me-1"></i>Salvar Altera√ß√µes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Busca autom√°tica de CEP usando ViaCEP
        document.getElementById('cep')?.addEventListener('blur', function() {
            const cep = this.value.replace(/\D/g, '');
            if (cep.length === 8) {
                fetch(`https://viacep.com.br/ws/${cep}/json/`)
                    .then(response => response.json())
                    .then(data => {
                        if (!data.erro) {
                            document.getElementById('endereco').value = data.logradouro || '';
                            document.getElementById('bairro').value = data.bairro || '';
                            document.getElementById('cidade').value = data.localidade || '';
                            document.getElementById('estado').value = data.uf || '';
                        }
                    })
                    .catch(err => console.log('Erro ao buscar CEP:', err));
            }
        });
    </script>
}
