@model AUTistima.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Alterar Senha";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-salmon text-white text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-key me-2"></i>Alterar Senha
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="SenhaAtual" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="SenhaAtual" class="form-control" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword(this)">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="SenhaAtual" class="text-danger"></span>
                        </div>
                        
                        <hr class="my-4">
                        
                        <div class="mb-3">
                            <label asp-for="NovaSenha" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="NovaSenha" class="form-control" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword(this)">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NovaSenha" class="text-danger"></span>
                            <small class="text-muted">Mínimo 6 caracteres, com números e letras.</small>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="ConfirmarSenha" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="ConfirmarSenha" class="form-control" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword(this)">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-salmon btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Alterar Senha
                            </button>
                            <a asp-action="Profile" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Voltar ao Perfil
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Dicas de segurança -->
            <div class="card border-0 bg-light mt-4">
                <div class="card-body">
                    <h6 class="text-muted"><i class="bi bi-shield-check me-2"></i>Dicas de Segurança</h6>
                    <ul class="small text-muted mb-0">
                        <li>Use uma senha única para cada serviço</li>
                        <li>Evite informações pessoais como datas de nascimento</li>
                        <li>Combine letras maiúsculas, minúsculas, números e símbolos</li>
                        <li>Nunca compartilhe sua senha com terceiros</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function togglePassword(btn) {
            const input = btn.parentElement.querySelector('input');
            const icon = btn.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'bi bi-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'bi bi-eye';
            }
        }
    </script>
}
