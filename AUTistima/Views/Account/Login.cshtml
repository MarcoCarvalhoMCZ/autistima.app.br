@model AUTistima.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Entrar";
    Layout = "~/Views/Home/_LayoutHome.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card">
                <div class="card-header text-center bg-salmon-light">
                    <h3 class="mb-0">
                        <i class="bi bi-heart text-salmon me-2"></i>Entrar
                    </h3>
                </div>
                <div class="card-body p-4">
                    <p class="text-center text-muted mb-4">
                        Bem-vinda de volta! Entre para acessar a comunidade.
                    </p>
                    
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="seu@email.com" autofocus />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="••••••" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>
                        
                        <button type="submit" class="btn btn-salmon w-100 mb-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Entrar
                        </button>
                    </form>
                    
                    <hr>
                    
                    <div class="text-center">
                        <p class="mb-2">Ainda não tem conta?</p>
                        <a asp-action="Register" class="btn btn-outline-salmon">
                            <i class="bi bi-person-plus me-2"></i>Criar Conta
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}