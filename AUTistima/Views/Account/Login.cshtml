@model AUTistima.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Entrar";
    Layout = "~/Views/Home/_LayoutHome.cshtml";
}

<!-- Conteúdo de Ajuda -->
<div id="page-help-content" class="d-none">
    <div class="help-step">
        <div class="help-step-number">1</div>
        <div class="help-step-content">
            <h6>Acesso</h6>
            <p>Use o e-mail e senha que você cadastrou para entrar.</p>
        </div>
    </div>
    <div class="help-step">
        <div class="help-step-number">2</div>
        <div class="help-step-content">
            <h6>Esqueceu a senha?</h6>
            <p>Se não lembrar da senha, entre em contato com o suporte ou tente recuperar (em breve).</p>
        </div>
    </div>
    <div class="help-step">
        <div class="help-step-number">3</div>
        <div class="help-step-content">
            <h6>Novo Cadastro</h6>
            <p>Se ainda não tem conta, clique em "Criar Conta" abaixo do formulário.</p>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card">
                <div class="card-header text-center bg-salmon-light">
                    <h3 class="mb-0">
                        <i class="bi bi-heart text-salmon me-2"></i>Entrar
                    </h3>
                </div>
                <div class="card-body p-4">
                    <p class="text-center text-muted mb-4">
                        Bem-vinda de volta! Entre para acessar a comunidade.
                    </p>
                    
                    <form asp-action="Login" method="post" id="loginForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="seu@email.com" autofocus />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" placeholder="••••••" id="passwordInput" />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword"
                                        aria-label="Mostrar ou ocultar senha"
                                        title="Mostrar/ocultar senha">
                                    <i class="bi bi-eye" id="togglePasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>
                        
                        <button type="submit" class="btn btn-salmon w-100 mb-3" id="btnSubmit">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Entrar
                        </button>
                    </form>
                    
                    <hr>
                    
                    <div class="text-center">
                        <p class="mb-2">Ainda não tem conta?</p>
                        <a asp-action="Register" class="btn btn-outline-salmon">
                            <i class="bi bi-person-plus me-2"></i>Criar Conta
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#loginForm').on('submit', function () {
                if ($(this).valid()) {
                    var btn = $('#btnSubmit');
                    btn.prop('disabled', true);
                    btn.html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Entrando...');
                }
            });

            // Mostrar/ocultar senha
            $('#togglePassword').on('click', function () {
                var input = $('#passwordInput');
                var icon = $('#togglePasswordIcon');
                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                    $(this).attr('title', 'Ocultar senha');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                    $(this).attr('title', 'Mostrar senha');
                }
            });
        });
    </script>
}