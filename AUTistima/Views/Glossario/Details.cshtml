@model AUTistima.Models.GlossaryTerm
@{
    ViewData["Title"] = Model.TermoTecnico;
    if (!User.Identity?.IsAuthenticated ?? true)
    {
        Layout = "~/Views/Home/_LayoutHome.cshtml";
    }
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Mini Dicionário</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.TermoTecnico</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="mb-4">
                        <h1 class="display-5 fw-bold text-salmon">@Model.TermoTecnico</h1>
                        @if (!string.IsNullOrEmpty(Model.Categoria))
                        {
                            <span class="badge bg-secondary">@Model.Categoria</span>
                        }
                    </div>

                    <div class="card bg-light border-0 mb-4">
                        <div class="card-body">
                            <h5 class="fw-semibold mb-3">
                                <i class="bi bi-lightbulb text-warning me-2"></i>
                                Explicação Simples
                            </h5>
                            <p class="lead mb-0" style="white-space: pre-line;">@Model.ExplicacaoSimples</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ExemploUso))
                    {
                        <div class="mb-4">
                            <h5 class="fw-semibold mb-3">
                                <i class="bi bi-chat-quote text-primary me-2"></i>
                                Exemplo de Uso
                            </h5>
                            <div class="alert alert-info border-0">
                                <em>"@Model.ExemploUso"</em>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Fonte))
                    {
                        <div class="mb-4">
                            <h6 class="text-muted">
                                <i class="bi bi-book me-1"></i>
                                Fonte/Referência
                            </h6>
                            <p class="small text-secondary">@Model.Fonte</p>
                        </div>
                    }
                </div>
                <div class="card-footer bg-white">
                    <a asp-action="Index" class="btn btn-outline-salmon">
                        <i class="bi bi-arrow-left me-1"></i>
                        Voltar ao Dicionário
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
