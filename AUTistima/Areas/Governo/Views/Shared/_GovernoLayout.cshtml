@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
@{
    var currentUser = await UserManager.GetUserAsync(User);
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AUTistima Governo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .sidebar-governo {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 260px;
            background: linear-gradient(180deg, #6f42c1 0%, #432874 100%);
            padding-top: 1rem;
            z-index: 1000;
        }
        .sidebar-governo .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 0.75rem 1.5rem;
            border-radius: 0;
            transition: all 0.2s;
        }
        .sidebar-governo .nav-link:hover,
        .sidebar-governo .nav-link.active {
            background: rgba(255,255,255,0.15);
            color: #fff;
        }
        .sidebar-governo .nav-link i {
            width: 24px;
        }
        .main-content-governo {
            margin-left: 260px;
            min-height: 100vh;
            background-color: #f8f9fa;
        }
        .governo-header {
            background: white;
            border-bottom: 1px solid #dee2e6;
            padding: 1rem 1.5rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar-governo d-flex flex-column">
        <div class="px-3 mb-4">
            <a href="/" class="text-decoration-none">
                <h4 class="text-white mb-0">
                    <i class="bi bi-heart-pulse me-2"></i>AUTistima
                </h4>
                <small class="text-white-50">Área Governamental</small>
            </a>
        </div>
        
        <hr class="bg-white mx-3 my-2">
        
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
                   asp-area="Governo" asp-controller="Governo" asp-action="Index">
                    <i class="bi bi-speedometer2 me-2"></i>Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Estatisticas" ? "active" : "")" 
                   asp-area="Governo" asp-controller="Governo" asp-action="Estatisticas">
                    <i class="bi bi-graph-up me-2"></i>Estatísticas
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Triagens" ? "active" : "")" 
                   asp-area="Governo" asp-controller="Governo" asp-action="Triagens">
                    <i class="bi bi-clipboard-data me-2"></i>Triagens
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Escolas" ? "active" : "")" 
                   asp-area="Governo" asp-controller="Governo" asp-action="Escolas">
                    <i class="bi bi-building me-2"></i>Escolas
                </a>
            </li>
        </ul>
        
        <hr class="bg-white mx-3 my-2 mt-auto">
        
        <ul class="nav flex-column mb-3">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house me-2"></i>Voltar ao Site
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                    <i class="bi bi-box-arrow-left me-2"></i>Sair
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="main-content-governo">
        <header class="governo-header d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0">@ViewData["Title"]</h5>
            </div>
            <div class="d-flex align-items-center gap-3">
                <span class="badge" style="background-color: #6f42c1;">Governo/Administração Pública</span>
                <span class="text-muted">@currentUser?.NomeCompleto</span>
            </div>
        </header>
        
        <main class="p-4">
            @if (TempData["Mensagem"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Mensagem"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
