@model IEnumerable<AUTistima.Models.ScreeningRequest>
@using AUTistima.Models.Enums
@{
    ViewData["Title"] = "Triagens";
    var statusAtual = ViewBag.Status as StatusTriagem?;
    var paginaAtual = (int)(ViewBag.PaginaAtual ?? 1);
    var totalPaginas = (int)(ViewBag.TotalPaginas ?? 1);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Acompanhe todas as solicitações de triagem no município</p>
    </div>
</div>

<!-- Filtros -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Filtrar por Status</label>
                <select name="status" class="form-select">
                    <option value="">Todos os Status</option>
                    @foreach (StatusTriagem status in Enum.GetValues(typeof(StatusTriagem)))
                    {
                        <option value="@status" selected="@(statusAtual == status)">@status</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-filter me-1"></i>Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-clipboard-check display-1 text-muted mb-3"></i>
            <h4 class="text-muted">Nenhuma triagem encontrada</h4>
            <p class="text-muted">Não há triagens com os filtros selecionados.</p>
        </div>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Código</th>
                        <th>Escola</th>
                        <th>Série/Ano</th>
                        <th>Status</th>
                        <th>Data Solicitação</th>
                        <th>Data Conclusão</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var triagem in Model)
                    {
                        <tr>
                            <td>
                                <code>@(triagem.CodigoIdentificador ?? $"TRI-{triagem.Id:D5}")</code>
                            </td>
                            <td>
                                @(triagem.Escola?.Nome ?? "N/A")
                                @if (!string.IsNullOrEmpty(triagem.Escola?.Cidade))
                                {
                                    <small class="text-muted d-block">@triagem.Escola.Cidade/@triagem.Escola.Estado</small>
                                }
                            </td>
                            <td>@(triagem.SerieAno ?? "-")</td>
                            <td>
                                @switch (triagem.Status)
                                {
                                    case StatusTriagem.Pendente:
                                        <span class="badge bg-warning text-dark">Pendente</span>
                                        break;
                                    case StatusTriagem.EmAvaliacao:
                                        <span class="badge bg-info">Em Avaliação</span>
                                        break;
                                    case StatusTriagem.Encaminhado:
                                        <span class="badge bg-primary">Encaminhado</span>
                                        break;
                                    case StatusTriagem.Concluido:
                                        <span class="badge bg-success">Concluído</span>
                                        break;
                                    case StatusTriagem.Cancelado:
                                        <span class="badge bg-secondary">Cancelado</span>
                                        break;
                                }
                            </td>
                            <td>@triagem.DataSolicitacao.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (triagem.DataConclusao.HasValue)
                                {
                                    @triagem.DataConclusao.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Paginação -->
    @if (totalPaginas > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(paginaAtual == 1 ? "disabled" : "")">
                    <a class="page-link" href="?pagina=@(paginaAtual - 1)&status=@statusAtual">Anterior</a>
                </li>
                @for (int i = 1; i <= totalPaginas; i++)
                {
                    <li class="page-item @(i == paginaAtual ? "active" : "")">
                        <a class="page-link" href="?pagina=@i&status=@statusAtual">@i</a>
                    </li>
                }
                <li class="page-item @(paginaAtual == totalPaginas ? "disabled" : "")">
                    <a class="page-link" href="?pagina=@(paginaAtual + 1)&status=@statusAtual">Próxima</a>
                </li>
            </ul>
        </nav>
    }
}
