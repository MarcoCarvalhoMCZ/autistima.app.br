@model IEnumerable<AUTistima.Models.Opportunity>
@using AUTistima.Models.Enums
@{
    ViewData["Title"] = "Minhas Oportunidades";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Gerencie as oportunidades publicadas pela sua empresa</p>
    </div>
    <a asp-action="NovaOportunidade" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>Nova Oportunidade
    </a>
</div>

@if (!Model.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-briefcase display-1 text-muted mb-3"></i>
            <h4 class="text-muted">Nenhuma oportunidade cadastrada</h4>
            <p class="text-muted">Publique sua primeira oportunidade e ajude mães atípicas a encontrar trabalho!</p>
            <a asp-action="NovaOportunidade" class="btn btn-success mt-2">
                <i class="bi bi-plus-circle me-2"></i>Publicar Oportunidade
            </a>
        </div>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Título</th>
                        <th>Tipo</th>
                        <th>Localização</th>
                        <th class="text-center">Flexibilidade</th>
                        <th>Status</th>
                        <th>Criado em</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Titulo</strong>
                                @if (!string.IsNullOrEmpty(item.ValorSalario))
                                {
                                    <br><small class="text-success">@item.ValorSalario</small>
                                }
                            </td>
                            <td>
                                @switch (item.Tipo)
                                {
                                    case TipoOportunidade.EmpregoParaMae:
                                        <span class="badge bg-primary">Vaga para Mãe</span>
                                        break;
                                    case TipoOportunidade.EmpregoParaFilho:
                                        <span class="badge bg-info">Vaga PCD</span>
                                        break;
                                    case TipoOportunidade.Capacitacao:
                                        <span class="badge bg-warning text-dark">Capacitação</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@item.Tipo</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Cidade))
                                {
                                    <span>@item.Cidade/@item.Estado</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.PermiteHomeOffice)
                                {
                                    <span class="badge bg-success-subtle text-success me-1" title="Home Office">
                                        <i class="bi bi-house"></i>
                                    </span>
                                }
                                @if (item.HorarioFlexivel)
                                {
                                    <span class="badge bg-info-subtle text-info" title="Horário Flexível">
                                        <i class="bi bi-clock"></i>
                                    </span>
                                }
                            </td>
                            <td>
                                @if (item.Ativo)
                                {
                                    <span class="badge bg-success">Ativa</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inativa</span>
                                }
                                @if (item.DataExpiracao.HasValue && item.DataExpiracao < DateTime.UtcNow)
                                {
                                    <span class="badge bg-danger">Expirada</span>
                                }
                            </td>
                            <td>
                                <small>@item.DataCriacao.ToString("dd/MM/yyyy")</small>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditarOportunidade" asp-route-id="@item.Id" 
                                       class="btn btn-outline-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="ExcluirOportunidade" asp-route-id="@item.Id" method="post" 
                                          class="d-inline" 
                                          onsubmit="return confirm('Tem certeza que deseja excluir esta oportunidade?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="mt-4">
    <div class="card border-0 bg-light">
        <div class="card-body">
            <h6 class="mb-2"><i class="bi bi-info-circle me-2"></i>Dicas para suas oportunidades</h6>
            <ul class="mb-0 small text-muted">
                <li>Ofereça <strong>horário flexível</strong> - mães atípicas precisam acompanhar terapias e consultas</li>
                <li>Mencione se aceita <strong>home office</strong> - facilita muito a vida de quem cuida</li>
                <li>Seja clara nos <strong>requisitos</strong> - evite candidaturas frustradas</li>
                <li>Destaque os <strong>benefícios</strong> inclusivos da sua empresa</li>
            </ul>
        </div>
    </div>
</div>
