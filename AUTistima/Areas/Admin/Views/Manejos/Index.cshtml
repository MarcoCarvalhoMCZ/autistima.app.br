@model IEnumerable<Manejo>
@{
    ViewData["Title"] = "Gerenciar Manejos";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-lightbulb me-2"></i>
                Dicas de Manejo
            </h1>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <select name="categoria" class="form-select">
                        <option value="">Todas as categorias</option>
                        @foreach (CategoriaManejo cat in Enum.GetValues(typeof(CategoriaManejo)))
                        {
                            <option value="@cat" selected="@(ViewBag.Categoria == cat)">@cat</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <select name="aprovado" class="form-select">
                        <option value="">Todos os status</option>
                        <option value="true" selected="@(ViewBag.Aprovado == true)">Aprovados</option>
                        <option value="false" selected="@(ViewBag.Aprovado == false)">Pendentes</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-funnel me-1"></i>Filtrar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Título</th>
                        <th>Categoria</th>
                        <th>Autor</th>
                        <th>Data</th>
                        <th>Status</th>
                        <th width="180">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var manejo in Model)
                    {
                        <tr>
                            <td>
                                <strong>@manejo.Titulo</strong>
                                <br><small class="text-muted">@manejo.Descricao?.Substring(0, Math.Min(50, manejo.Descricao?.Length ?? 0))...</small>
                            </td>
                            <td><span class="badge bg-info">@manejo.Categoria</span></td>
                            <td>@manejo.Autor?.NomeCompleto</td>
                            <td>@manejo.DataCriacao.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (manejo.ValidadoPorEspecialista)
                                {
                                    <span class="badge bg-success">Aprovado</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pendente</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    @if (!manejo.ValidadoPorEspecialista)
                                    {
                                        <button type="button" class="btn btn-outline-success" title="Aprovar"
                                                onclick="aprovarManejo(@manejo.Id, this)">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-outline-warning" title="Reprovar"
                                                onclick="reprovarManejo(@manejo.Id, this)">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    }
                                    <a asp-action="Edit" asp-route-id="@manejo.Id" class="btn btn-outline-secondary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@manejo.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Excluir este manejo?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (ViewBag.TotalPaginas > 1)
        {
            <div class="card-footer bg-transparent">
                <nav>
                    <ul class="pagination pagination-sm mb-0 justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                        {
                            <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function aprovarManejo(id, btn) {
            fetch('@Url.Action("Aprovar", "Manejos", new { area = "Admin" })/' + id, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) location.reload();
            });
        }
        
        function reprovarManejo(id, btn) {
            fetch('@Url.Action("Reprovar", "Manejos", new { area = "Admin" })/' + id, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) location.reload();
            });
        }
    </script>
    <form>@Html.AntiForgeryToken()</form>
}
