@model AUTistima.Models.Post
@{
    ViewData["Title"] = "Editar Post";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Postagens</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">Detalhes</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar</li>
        </ol>
    </nav>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Editar Post</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Conteúdo</label>
                    <textarea name="conteudo" class="form-control" rows="6" required>@Model.Conteudo</textarea>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" name="permitirComentarios" value="true" @(Model.PermitirComentarios ? "checked" : "") />
                    <label class="form-check-label">Permitir comentários</label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-salmon"><i class="bi bi-check-lg"></i> Salvar</button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
