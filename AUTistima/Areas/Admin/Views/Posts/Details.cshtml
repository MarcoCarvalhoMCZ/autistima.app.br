@model AUTistima.Models.Post
@{
    ViewData["Title"] = "Detalhes do Post";
}

<div class="container py-4">
    @Html.AntiForgeryToken()
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Postagens</a></li>
            <li class="breadcrumb-item active" aria-current="page">Detalhes</li>
        </ol>
    </nav>

    <div class="card shadow-sm border-0 mb-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <div>
                    <h4 class="mb-1">@(Model.Autor?.NomeCompleto ?? "—")</h4>
                    <small class="text-muted">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
                <div>
                    @if (Model.Ativo)
                    {
                        <span class="badge bg-success">Ativo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inativo</span>
                    }
                    <span class="badge bg-secondary ms-2">@Model.StatusModeracao</span>
                </div>
            </div>
            <p class="mb-3" style="white-space: pre-wrap;">@Model.Conteudo</p>
            <div class="row g-2 mb-3">
                <div class="col-12">
                    <div class="btn-group w-100 flex-wrap" role="group">
                        <button type="button" class="btn btn-outline-secondary" onclick="toggleAtivo(@Model.Id)" title="Ativar ou desativar o post">
                            <i class="bi bi-power"></i> Ativar/Inativar
                        </button>
                        <button type="button" class="btn btn-outline-success" onclick="aprovar(@Model.Id)" title="Aprovar este post"><i class="bi bi-check-circle"></i> Aprovar</button>
                        <button type="button" class="btn btn-outline-warning" onclick="reprovar(@Model.Id)" title="Reprovar este post"><i class="bi bi-x-circle"></i> Reprovar</button>
                        <a asp-action="Index" class="btn btn-outline-primary" title="Voltar para lista">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </div>
                <div class="col-12">
                    <form asp-action="Delete" method="post" onsubmit="return confirm('⚠️ ATENÇÃO: Esta ação apagará DEFINITIVAMENTE este post e todos os seus comentários. Deseja continuar?');" class="d-inline-block w-100">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger w-100" title="Deletar permanentemente este post">
                            <i class="bi bi-trash"></i> Apagar Definitivamente
                        </button>
                    </form>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.FeedbackModeracao))
            {
                <div class="alert alert-warning mt-3 mb-0">
                    <strong>Feedback:</strong> @Model.FeedbackModeracao
                </div>
            }
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-chat-dots me-2"></i>Comentários (@(Model.Comentarios?.Count(c => c.Ativo) ?? 0))</h5>
        </div>
        <div class="card-body">
            @if (Model.Comentarios?.Any(c => c.Ativo) == true)
            {
                foreach (var comentario in Model.Comentarios.Where(c => c.Ativo).OrderByDescending(c => c.DataCriacao))
                {
                    <div class="border rounded p-3 mb-2">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <strong>@(comentario.Autor?.NomeCompleto ?? "—")</strong>
                                <small class="text-muted"> — @comentario.DataCriacao.ToString("dd/MM HH:mm")</small>
                                <p class="mb-1">@comentario.Conteudo</p>
                            </div>
                            <form asp-action="DeleteComentario" method="post" onsubmit="return confirm('Remover comentário?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@comentario.Id" />
                                <input type="hidden" name="postId" value="@Model.Id" />
                                <button type="submit" class="btn btn-sm btn-link text-danger"><i class="bi bi-trash"></i></button>
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted mb-0">Nenhum comentário ativo.</p>
            }
        </div>
    </div>

    <div class="card shadow-sm border-0 mt-3">
        <div class="card-header bg-light">
            <h6 class="mb-0"><i class="bi bi-archive me-2"></i>Comentários inativos (@(Model.Comentarios?.Count(c => !c.Ativo) ?? 0))</h6>
        </div>
        <div class="card-body">
            @if (Model.Comentarios?.Any(c => !c.Ativo) == true)
            {
                foreach (var comentario in Model.Comentarios.Where(c => !c.Ativo).OrderByDescending(c => c.DataCriacao))
                {
                    <div class="border rounded p-3 mb-2 bg-light">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <strong>@(comentario.Autor?.NomeCompleto ?? "—")</strong>
                                <small class="text-muted"> — @comentario.DataCriacao.ToString("dd/MM HH:mm")</small>
                                <p class="mb-1">@comentario.Conteudo</p>
                            </div>
                            <form asp-action="RestaurarComentario" method="post" onsubmit="return confirm('Restaurar comentário?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@comentario.Id" />
                                <input type="hidden" name="postId" value="@Model.Id" />
                                <button type="submit" class="btn btn-sm btn-link text-success"><i class="bi bi-arrow-counterclockwise"></i></button>
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted mb-0">Nenhum comentário inativo.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Variável global para armazenar ID durante o modal
    let postIdEmReprovacao = null;

    // Inicializar e limpar modal ao fechar
    document.addEventListener('DOMContentLoaded', function() {
        const modalReprovacao = document.getElementById('modalReprovacao');
        if (modalReprovacao) {
            modalReprovacao.addEventListener('hidden.bs.modal', function() {
                document.getElementById('feedbackInput').value = '';
                postIdEmReprovacao = null;
            });
        }
    });

    function toggleAtivo(id) {
        if (!confirm('Deseja alterar o status deste post?')) return;
        fetch('@Url.Action("ToggleAtivo")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            },
            body: `id=${id}`
        }).then(r => r.json()).then(data => {
            if (data.success) location.reload();
            else alert('Erro ao alterar status');
        });
    }

    function aprovar(id) {
        if (!confirm('Aprovar este post?')) return;
        fetch('@Url.Action("Aprovar")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            },
            body: `id=${id}`
        }).then(r => r.json()).then(data => {
            if (data.success) location.reload();
            else alert('Erro ao aprovar.');
        });
    }

    function reprovar(id) {
        postIdEmReprovacao = id;
        const modal = new bootstrap.Modal(document.getElementById('modalReprovacao'), {
            backdrop: 'static',
            keyboard: false
        });
        modal.show();
        document.getElementById('feedbackInput').focus();
    }

    function enviarReprovacao() {
        const feedback = document.getElementById('feedbackInput').value.trim();
        const id = postIdEmReprovacao;

        if (!id) {
            alert('❌ ID do post não encontrado.');
            return;
        }

        // Fechar modal
        bootstrap.Modal.getInstance(document.getElementById('modalReprovacao')).hide();

        // Enviar requisição
        fetch('@Url.Action("Reprovar")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            },
            body: `id=${id}&feedback=${encodeURIComponent(feedback || '')}`
        }).then(r => r.json()).then(data => {
            if (data.success) location.reload();
            else alert('Erro ao reprovar.');
        });
    }

    // Suportar Ctrl + Enter para enviar
    document.addEventListener('DOMContentLoaded', function() {
        const feedbackInput = document.getElementById('feedbackInput');
        if (feedbackInput) {
            feedbackInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && e.ctrlKey) {
                    enviarReprovacao();
                }
            });
        }
    });
</script>
}

<!-- Modal de Reprovação -->
<div class="modal fade" id="modalReprovacao" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger bg-opacity-10 border-0">
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-exclamation-circle-fill text-danger" style="font-size: 1.5rem;"></i>
                    <h5 class="modal-title fw-semibold">Reprovar Postagem</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3 text-muted">
                    <i class="bi bi-info-circle me-2"></i>
                    Informe um motivo para a reprovação. Este feedback será enviado para a autora da postagem.
                </p>
                <div class="mb-3">
                    <label for="feedbackInput" class="form-label fw-semibold">Motivo da Reprovação</label>
                    <textarea id="feedbackInput" class="form-control" placeholder="Ex: Conteúdo inadequado, linguagem ofensiva, etc..." 
                              rows="4" style="resize: vertical; max-height: 200px;"></textarea>
                    <small class="text-muted d-block mt-2">
                        <i class="bi bi-info-circle me-1"></i>
                        Dica: Use Ctrl + Enter para enviar rapidamente
                    </small>
                </div>
                <div class="alert alert-info alert-sm" role="alert">
                    <i class="bi bi-lightbulb me-2"></i>
                    <strong>Bom feedback:</strong> Seja específico e construtivo para ajudar a autora a melhorar.
                </div>
            </div>
            <div class="modal-footer border-top bg-light">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-danger" onclick="enviarReprovacao()">
                    <i class="bi bi-check-circle me-1"></i>Reprovar e Enviar
                </button>
            </div>
        </div>
    </div>
</div>
