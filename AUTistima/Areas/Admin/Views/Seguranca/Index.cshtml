@model IEnumerable<AUTistima.Models.UserActivity>
@using AUTistima.Models.Enums
@using AUTistima.Extensions

@{
    ViewData["Title"] = "Monitoramento de Segurança";
    var tipoSelecionado = ViewBag.TipoSelecionado as TipoAtividade?;
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="bi bi-shield-lock-fill text-danger"></i> Monitoramento de Segurança</h2>
            <p class="text-muted">Logs de atividades suspeitas e ataques bloqueados</p>
        </div>
        <div class="card bg-warning bg-opacity-10 border-warning">
            <div class="card-body py-2 px-3">
                <small class="text-warning-emphasis"><i class="bi bi-exclamation-triangle"></i> Usuários marcados como inativos em ataques devem ser revisados.</small>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Tipo de Atividade</label>
                    <select name="tipo" class="form-select" onchange="this.form.submit()">
                        <option value="">Todos</option>
                        @foreach (TipoAtividade tipo in Enum.GetValues(typeof(TipoAtividade)))
                        {
                            if (tipoSelecionado == tipo)
                            {
                                <option value="@tipo" selected>@tipo.GetDisplayName()</option>
                            }
                            else
                            {
                                <option value="@tipo">@tipo.GetDisplayName()</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Buscar Usuário (Email/Nome)</label>
                    <div class="input-group">
                        <input type="text" name="searchUser" class="form-control" placeholder="Digite para buscar..." value="@Context.Request.Query["searchUser"]">
                        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabela -->
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Data/Hora</th>
                        <th>Nível</th>
                        <th>Tipo</th>
                        <th>Usuário</th>
                        <th>IP</th>
                        <th>Detalhes</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var isAttack = item.TipoAtividade == TipoAtividade.TentativaAtaque;
                        var rowClass = isAttack ? "table-danger" : "";
                        var textClass = isAttack ? "text-danger fw-bold" : "";
                        
                        <tr class="@rowClass">
                            <td>@item.DataHora.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>
                                @if (isAttack)
                                {
                                    <span class="badge bg-danger">CRÍTICO</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">INFO</span>
                                }
                            </td>
                            <td class="@textClass">
                                @item.TipoAtividade.GetDisplayName()
                            </td>
                            <td>
                                @if (item.Usuario != null)
                                {
                                    <div class="d-flex flex-column">
                                        <span class="fw-medium">@item.Usuario.UserName</span>
                                        <small class="text-muted">@item.Usuario.Email</small>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Anônimo/Sistema</span>
                                }
                            </td>
                            <td><code>@item.EnderecoIP</code></td>
                            <td>
                                <span class="d-inline-block text-truncate" style="max-width: 250px;" title="@item.Detalhes">
                                    @item.Detalhes
                                </span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-geo-alt-fill"></i> Detalhes & Mapa
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                <i class="bi bi-search fs-1 d-block mb-3"></i>
                                Nenhum registro encontrado com os filtros atuais.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
