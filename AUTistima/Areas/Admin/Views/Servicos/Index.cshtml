@model IEnumerable<Service>
@{
    ViewData["Title"] = "Gerenciar Serviços";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-clipboard2-pulse me-2"></i>
                Serviços de Saúde
            </h1>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <select name="especialidadeId" class="form-select">
                        <option value="">Todas as especialidades</option>
                        @foreach (var esp in (IEnumerable<AUTistima.Models.EspecialidadeProfissional>)ViewBag.Especialidades)
                        {
                            <option value="@esp.Id" selected="@(ViewBag.Especialidade == esp.Id)">@esp.Nome</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary me-2">Filtrar</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="table-responsive-cards">
            <!-- Desktop: Tabela -->
            <div class="desktop-table">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Profissional</th>
                                <th>Especialidade</th>
                                <th>Atendimento</th>
                                <th>Cidade/UF</th>
                                <th>Valor</th>
                                <th>Status</th>
                                <th width="120">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var servico in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@servico.NomeProfissional</strong>
                                        <br><small class="text-muted">@servico.Profissional?.Email</small>
                                    </td>
                                    <td><span class="badge bg-info">@(servico.Especialidade?.Nome ?? "-")</span></td>
                                    <td>
                                        @servico.TipoAtendimento
                                        @if (servico.AtendeOnline)
                                        {
                                            <span class="badge bg-success ms-1">Online</span>
                                        }
                                    </td>
                                    <td>@servico.Cidade / @servico.Estado</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(servico.ValorConsulta))
                                        {
                                            <span>@servico.ValorConsulta</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (servico.Ativo)
                                        {
                                            <span class="badge bg-success">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inativo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@servico.Id" class="btn btn-outline-secondary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-warning" title="Toggle Status"
                                                    onclick="toggleAtivo(@servico.Id)">
                                                <i class="bi bi-toggle-on"></i>
                                            </button>
                                            <form asp-action="Delete" asp-route-id="@servico.Id" method="post" class="d-inline"
                                                  onsubmit="return confirmarExclusao(this, 'Excluir este serviço?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Excluir">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Mobile: Cards -->
            <div class="mobile-cards p-3">
                @foreach (var servico in Model)
                {
                    <div class="mobile-card">
                        <div class="mobile-card-header">
                            <div>
                                <h6 class="mobile-card-title">@servico.NomeProfissional</h6>
                                <span class="badge bg-info">@(servico.Especialidade?.Nome ?? "-")</span>
                                @if (servico.AtendeOnline)
                                {
                                    <span class="badge bg-success">Online</span>
                                }
                            </div>
                            @if (servico.Ativo)
                            {
                                <span class="badge bg-success">Ativo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inativo</span>
                            }
                        </div>
                        <div class="mobile-card-body">
                            <div class="mobile-card-row">
                                <span class="mobile-card-label">Atendimento</span>
                                <span class="mobile-card-value">@servico.TipoAtendimento</span>
                            </div>
                            <div class="mobile-card-row">
                                <span class="mobile-card-label">Localização</span>
                                <span class="mobile-card-value">@servico.Cidade / @servico.Estado</span>
                            </div>
                            <div class="mobile-card-row">
                                <span class="mobile-card-label">Valor</span>
                                <span class="mobile-card-value">@(servico.ValorConsulta ?? "-")</span>
                            </div>
                        </div>
                        <div class="mobile-card-footer">
                            <a asp-action="Edit" asp-route-id="@servico.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-warning" onclick="toggleAtivo(@servico.Id)">
                                <i class="bi bi-toggle-on"></i> Status
                            </button>
                            <form asp-action="Delete" asp-route-id="@servico.Id" method="post" class="d-inline"
                                  onsubmit="return confirmarExclusao(this, 'Excluir este serviço?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Excluir
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>

        @if (ViewBag.TotalPaginas > 1)
        {
            <div class="card-footer bg-transparent">
                <nav>
                    <ul class="pagination pagination-sm mb-0 justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                        {
                            <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function toggleAtivo(id) {
            fetch('@Url.Action("ToggleAtivo", "Servicos", new { area = "Admin" })/' + id, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) location.reload();
            });
        }
    </script>
    <form>@Html.AntiForgeryToken()</form>
}
