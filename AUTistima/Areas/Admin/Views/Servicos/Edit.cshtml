@model Service
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Editar Serviço";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil me-2"></i>
                        Editar Serviço
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserId" />
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="NomeProfissional" class="form-label"></label>
                                <input asp-for="NomeProfissional" class="form-control" required />
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="EspecialidadeId" class="form-label"></label>
                                <select asp-for="EspecialidadeId" asp-items="@(new SelectList((IEnumerable<AUTistima.Models.EspecialidadeProfissional>)ViewBag.Especialidades, "Id", "Nome"))" class="form-select"></select>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="TipoAtendimento" class="form-label"></label>
                                <select asp-for="TipoAtendimento" asp-items="Html.GetEnumSelectList<TipoAtendimento>()" class="form-select"></select>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="ValorConsulta" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="ValorConsulta" type="number" step="0.01" class="form-control" />
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="mt-2">
                                    <div class="form-check">
                                        <input asp-for="AtendeOnline" class="form-check-input" type="checkbox" />
                                        <label asp-for="AtendeOnline" class="form-check-label">Atende Online</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Cidade" class="form-label"></label>
                                <input asp-for="Cidade" class="form-control" />
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Estado" class="form-label"></label>
                                <select asp-for="Estado" class="form-select">
                                    <option value="">UF</option>
                                    @foreach (var uf in new[] { "AC", "AL", "AP", "AM", "BA", "CE", "DF", "ES", "GO", "MA", "MT", "MS", "MG", "PA", "PB", "PR", "PE", "PI", "RJ", "RN", "RS", "RO", "RR", "SC", "SP", "SE", "TO" })
                                    {
                                        <option value="@uf">@uf</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="mt-2">
                                    <div class="form-check">
                                        <input asp-for="Ativo" class="form-check-input" type="checkbox" />
                                        <label asp-for="Ativo" class="form-check-label">Serviço Ativo</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="Descricao" class="form-label"></label>
                                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                            </div>
                        </div>

                        <hr class="my-4">
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-salmon">
                                <i class="bi bi-check-lg me-2"></i>Salvar Alterações
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
