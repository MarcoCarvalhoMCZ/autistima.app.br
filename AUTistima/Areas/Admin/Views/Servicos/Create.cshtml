@model Service
@{
    ViewData["Title"] = "Novo Serviço";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>
                        Cadastrar Novo Serviço de Saúde
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="NomeProfissional" class="form-label">Nome do Profissional/Serviço</label>
                                <input asp-for="NomeProfissional" class="form-control" placeholder="Ex: CAPS Infantil Centro ou Dr. João Silva" required />
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Especialidade" class="form-label"></label>
                                <select asp-for="Especialidade" asp-items="Html.GetEnumSelectList<Especialidade>()" class="form-select">
                                    <option value="">Selecione a especialidade...</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="TipoAtendimento" class="form-label"></label>
                                <select asp-for="TipoAtendimento" asp-items="Html.GetEnumSelectList<TipoAtendimento>()" class="form-select">
                                    <option value="">Selecione o tipo...</option>
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="ValorConsulta" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="ValorConsulta" type="number" step="0.01" class="form-control" placeholder="0,00" />
                                </div>
                                <small class="text-muted">Deixe em branco se gratuito</small>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                <div class="mt-2">
                                    <div class="form-check">
                                        <input asp-for="AtendeOnline" class="form-check-input" type="checkbox" />
                                        <label asp-for="AtendeOnline" class="form-check-label">Atende Online</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="Endereco" class="form-label">Endereço</label>
                                <input asp-for="Endereco" class="form-control" placeholder="Rua, número, bairro..." />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Cidade" class="form-label"></label>
                                <input asp-for="Cidade" class="form-control" value="Maceió" />
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Estado" class="form-label"></label>
                                <select asp-for="Estado" class="form-select">
                                    <option value="">UF</option>
                                    <option value="AC">AC</option>
                                    <option value="AL" selected>AL</option>
                                    <option value="AP">AP</option>
                                    <option value="AM">AM</option>
                                    <option value="BA">BA</option>
                                    <option value="CE">CE</option>
                                    <option value="DF">DF</option>
                                    <option value="ES">ES</option>
                                    <option value="GO">GO</option>
                                    <option value="MA">MA</option>
                                    <option value="MT">MT</option>
                                    <option value="MS">MS</option>
                                    <option value="MG">MG</option>
                                    <option value="PA">PA</option>
                                    <option value="PB">PB</option>
                                    <option value="PR">PR</option>
                                    <option value="PE">PE</option>
                                    <option value="PI">PI</option>
                                    <option value="RJ">RJ</option>
                                    <option value="RN">RN</option>
                                    <option value="RS">RS</option>
                                    <option value="RO">RO</option>
                                    <option value="RR">RR</option>
                                    <option value="SC">SC</option>
                                    <option value="SP">SP</option>
                                    <option value="SE">SE</option>
                                    <option value="TO">TO</option>
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Telefone" class="form-label"></label>
                                <input asp-for="Telefone" class="form-control" placeholder="(82) 0000-0000" />
                            </div>

                            <div class="col-12">
                                <label asp-for="Descricao" class="form-label"></label>
                                <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descrição do serviço, horários de funcionamento, observações..."></textarea>
                            </div>
                        </div>

                        <hr class="my-4">
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-salmon">
                                <i class="bi bi-check-lg me-2"></i>Cadastrar Serviço
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-salmon {
        background-color: #F28B82;
        border-color: #F28B82;
        color: white;
    }
    .btn-salmon:hover {
        background-color: #e57373;
        border-color: #e57373;
        color: white;
    }
</style>
