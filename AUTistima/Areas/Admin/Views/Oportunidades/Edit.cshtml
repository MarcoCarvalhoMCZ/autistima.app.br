@model Opportunity
@{
    ViewData["Title"] = "Editar Oportunidade";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil me-2"></i>
                        Editar Oportunidade
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="DataCriacao" />
                        
                        <div class="row g-3">
                            <div class="col-md-8">
                                <label asp-for="Titulo" class="form-label"></label>
                                <input asp-for="Titulo" class="form-control" required />
                            </div>
                            
                            <div class="col-md-4">
                                <label asp-for="Tipo" class="form-label"></label>
                                <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<TipoOportunidade>()" class="form-select"></select>
                            </div>

                            <div class="col-12">
                                <label asp-for="Descricao" class="form-label"></label>
                                <textarea asp-for="Descricao" class="form-control" rows="4" required></textarea>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="ValorSalario" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="ValorSalario" type="number" step="0.01" class="form-control" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="DataExpiracao" class="form-label"></label>
                                <input asp-for="DataExpiracao" type="date" class="form-control" />
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">&nbsp;</label>
                                <div class="mt-2">
                                    <div class="form-check">
                                        <input asp-for="PermiteHomeOffice" class="form-check-input" type="checkbox" />
                                        <label asp-for="PermiteHomeOffice" class="form-check-label">Home Office</label>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="HorarioFlexivel" class="form-check-input" type="checkbox" />
                                        <label asp-for="HorarioFlexivel" class="form-check-label">Horário Flexível</label>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="Ativo" class="form-check-input" type="checkbox" />
                                        <label asp-for="Ativo" class="form-check-label">Oportunidade Ativa</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Contato" class="form-label"></label>
                                <input asp-for="Contato" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LinkExterno" class="form-label"></label>
                                <input asp-for="LinkExterno" type="url" class="form-control" />
                            </div>
                        </div>

                        <hr class="my-4">
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-salmon">
                                <i class="bi bi-check-lg me-2"></i>Salvar Alterações
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
