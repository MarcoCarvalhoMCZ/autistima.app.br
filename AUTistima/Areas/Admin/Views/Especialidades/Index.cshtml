@model IEnumerable<AUTistima.Models.EspecialidadeProfissional>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Especialidades";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h4 mb-0"><i class="bi bi-list-check me-2"></i>Especialidades</h1>
    </div>

    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensagem"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-salmon text-white">
                    <strong>Nova Especialidade</strong>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Nome *</label>
                            <input name="Nome" class="form-control" required maxlength="150" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descrição</label>
                            <textarea name="Descricao" class="form-control" maxlength="300" rows="2"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ordem</label>
                            <input name="Ordem" type="number" class="form-control" value="0" />
                        </div>
                        <div class="form-check mb-3">
                            <input name="Ativo" class="form-check-input" type="checkbox" checked />
                            <label class="form-check-label">Ativo</label>
                        </div>
                        <button type="submit" class="btn btn-salmon w-100">
                            <i class="bi bi-plus-lg me-1"></i>Criar
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <strong>Especialidades cadastradas</strong>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Ordem</th>
                                <th>Nome</th>
                                <th>Status</th>
                                <th class="text-end">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var esp in Model)
                            {
                                <tr>
                                    <td>@esp.Ordem</td>
                                    <td>
                                        <div class="fw-semibold">@esp.Nome</div>
                                        <small class="text-muted">@esp.Descricao</small>
                                    </td>
                                    <td>
                                        @if (esp.Ativo)
                                        {
                                            <span class="badge bg-success">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inativo</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@esp.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Toggle" asp-route-id="@esp.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                                @(esp.Ativo ? "Desativar" : "Ativar")
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
