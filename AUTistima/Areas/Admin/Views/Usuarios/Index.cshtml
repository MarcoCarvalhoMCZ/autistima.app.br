@model IEnumerable<ApplicationUser>
@using AUTistima.Models.Enums
@{
    ViewData["Title"] = "Gerenciar Usuários";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-people me-2"></i>
                Usuários
            </h1>
            <p class="text-muted mb-0">Total: @ViewBag.TotalItens usuários</p>
        </div>
        <a asp-action="Create" class="btn btn-salmon">
            <i class="bi bi-person-plus me-2"></i>Novo Usuário
        </a>
    </div>

    <!-- Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" name="busca" value="@ViewBag.Busca" class="form-control" placeholder="Buscar por nome ou email...">
                    </div>
                </div>
                <div class="col-md-4">
                    <select name="tipoPerfil" class="form-select">
                        <option value="">Todos os perfis</option>
                        @foreach (TipoPerfil tipo in Enum.GetValues(typeof(TipoPerfil)))
                        {
                            <option value="@tipo" selected="@(ViewBag.TipoPerfil == tipo)">@tipo</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-funnel me-1"></i>Filtrar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de Usuários -->
    <div class="card border-0 shadow-sm">
        <div class="table-responsive-cards">
            <!-- Desktop: Tabela -->
            <div class="desktop-table">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Perfil</th>
                                <th>Aprovação</th>
                                <th>Cidade/UF</th>
                                <th>Cadastro</th>
                                <th>Status</th>
                                <th width="150">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-salmon-light rounded-circle p-2 me-2">
                                                <i class="bi bi-person text-salmon"></i>
                                            </div>
                                            <div>
                                                <strong>@usuario.NomeCompleto</strong>
                                                @if (usuario.TipoPerfil == TipoPerfil.Administrador)
                                                {
                                                    <span class="badge bg-danger ms-1">Admin</span>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>@usuario.Email</td>
                                    <td>
                                        <span class="badge bg-secondary">@usuario.TipoPerfil</span>
                                    </td>
                                    <td>
                                        @switch (usuario.StatusAprovacao)
                                        {
                                            case StatusAprovacao.Pendente:
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-hourglass-split me-1"></i>Pendente
                                                </span>
                                                break;
                                            case StatusAprovacao.Aprovado:
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Aprovado
                                                </span>
                                                break;
                                            case StatusAprovacao.Rejeitado:
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i>Rejeitado
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td>@(usuario.Cidade ?? "-") @(usuario.Estado != null ? $"/ {usuario.Estado}" : "")</td>
                                    <td>@usuario.DataCadastro.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (usuario.Ativo)
                                        {
                                            <span class="badge bg-success">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inativo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-outline-primary" title="Detalhes">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-outline-secondary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            @if (usuario.StatusAprovacao == StatusAprovacao.Pendente && usuario.TipoPerfil != TipoPerfil.Administrador)
                                            {
                                                <button type="button" class="btn btn-outline-success" title="Aprovar" 
                                                        onclick="aprovarUsuario('@usuario.Id', '@usuario.NomeCompleto')">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-danger" title="Rejeitar" 
                                                        onclick="rejeitarUsuario('@usuario.Id', '@usuario.NomeCompleto')">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            }
                                            @if (usuario.TipoPerfil != TipoPerfil.Administrador)
                                            {
                                                <form asp-action="Delete" asp-route-id="@usuario.Id" method="post" class="d-inline" 
                                                      onsubmit="return confirmarExclusao(this, 'Tem certeza que deseja excluir este usuário?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-danger" title="Excluir">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Mobile: Cards -->
            <div class="mobile-cards p-3">
                @foreach (var usuario in Model)
                {
                    <div class="mobile-card">
                        <div class="mobile-card-header">
                            <div class="mobile-card-header-content">
                                <div class="mobile-card-avatar">
                                    <i class="bi bi-person"></i>
                                </div>
                                <div>
                                    <h6 class="mobile-card-title">@usuario.NomeCompleto</h6>
                                    <small class="text-muted">@usuario.Email</small>
                                </div>
                            </div>
                            @if (usuario.Ativo)
                            {
                                <span class="badge bg-success">Ativo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inativo</span>
                            }
                        </div>
                        <div class="mobile-card-body">
                            <div class="mobile-card-row">
                                <span class="mobile-card-label">Perfil</span>
                                <span class="mobile-card-value">
                                    <span class="badge bg-secondary">@usuario.TipoPerfil</span>
                                    @if (usuario.TipoPerfil == TipoPerfil.Administrador)
                                    {
                                        <span class="badge bg-danger">Admin</span>
                                    }
                                </span>
                            </div>
                            <div class="mobile-card-row">
                                <span class="mobile-card-label">Localização</span>
                                <span class="mobile-card-value">@(usuario.Cidade ?? "-") @(usuario.Estado != null ? $"/ {usuario.Estado}" : "")</span>
                            </div>
                            <div class="mobile-card-row">
                                <span class="mobile-card-label">Cadastro</span>
                                <span class="mobile-card-value">@usuario.DataCadastro.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                        <div class="mobile-card-footer">
                            <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                            <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            @if (usuario.TipoPerfil != TipoPerfil.Administrador)
                            {
                                <form asp-action="Delete" asp-route-id="@usuario.Id" method="post" class="d-inline" 
                                      onsubmit="return confirmarExclusao(this, 'Tem certeza que deseja excluir este usuário?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Excluir
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
        
        @if (ViewBag.TotalPaginas > 1)
        {
            <div class="card-footer bg-transparent">
                <nav>
                    <ul class="pagination pagination-sm mb-0 justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                        {
                            <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pagina="@i" 
                                   asp-route-busca="@ViewBag.Busca" asp-route-tipoPerfil="@ViewBag.TipoPerfil">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
<script>
function aprovarUsuario(usuarioId, nomeUsuario) {
    if (confirm(`Aprovar o perfil de ${nomeUsuario}?`)) {
        fetch('@Url.Action("Aprovar")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            },
            body: `id=${usuarioId}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Erro ao aprovar perfil');
            }
        });
    }
}

function rejeitarUsuario(usuarioId, nomeUsuario) {
    const motivo = prompt(`Por qual motivo deseja rejeitar o perfil de ${nomeUsuario}?`);
    if (motivo) {
        fetch('@Url.Action("Rejeitar")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            },
            body: `id=${usuarioId}&motivo=${encodeURIComponent(motivo)}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Erro ao rejeitar perfil');
            }
        });
    }
}

function confirmarExclusao(form, mensagem) {
    return confirm(mensagem);
}
</script>