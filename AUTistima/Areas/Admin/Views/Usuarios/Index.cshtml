@model IEnumerable<ApplicationUser>
@using AUTistima.Models.Enums
@{
    ViewData["Title"] = "Gerenciar Usuários";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-people me-2"></i>
                Usuários
            </h1>
            <p class="text-muted mb-0">Total: @ViewBag.TotalItens usuários</p>
        </div>
        <a asp-action="Create" class="btn btn-salmon">
            <i class="bi bi-person-plus me-2"></i>Novo Usuário
        </a>
    </div>

    <!-- Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" name="busca" value="@ViewBag.Busca" class="form-control" placeholder="Buscar por nome ou email...">
                    </div>
                </div>
                <div class="col-md-4">
                    <select name="tipoPerfil" class="form-select">
                        <option value="">Todos os perfis</option>
                        @foreach (TipoPerfil tipo in Enum.GetValues(typeof(TipoPerfil)))
                        {
                            <option value="@tipo" selected="@(ViewBag.TipoPerfil == tipo)">@tipo</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-funnel me-1"></i>Filtrar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Grid de Usuários -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4 mb-4">
        @foreach (var usuario in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm hover-shadow transition-all">
                    <div class="card-header bg-white border-bottom-0 pt-3 d-flex justify-content-between align-items-start">
                        <span class="badge @(usuario.TipoPerfil == TipoPerfil.Administrador ? "bg-danger" : "bg-primary") rounded-pill">
                            @usuario.TipoPerfil
                        </span>
                        
                        <div class="d-flex gap-1">
                            @if (usuario.Ativo)
                            {
                                <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">Ativo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill">Inativo</span>
                            }
                        </div>
                    </div>
                    
                    <div class="card-body text-center pt-1 pb-2">
                        <div class="mb-3 position-relative d-inline-block">
                            <div class="avatar-circle @(usuario.TipoPerfil == TipoPerfil.Administrador ? "bg-danger-subtle text-danger" : "bg-primary-subtle text-primary") rounded-circle d-flex align-items-center justify-content-center mx-auto" style="width: 64px; height: 64px; font-size: 1.75rem;">
                                <i class="bi bi-person"></i>
                            </div>
                            @if (usuario.StatusAprovacao == StatusAprovacao.Pendente)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle p-2 bg-warning border border-light rounded-circle" title="Aprovação Pendente">
                                    <span class="visually-hidden">Pendente</span>
                                </span>
                            }
                        </div>

                        <h5 class="card-title mb-1 text-truncate" title="@usuario.NomeCompleto">@usuario.NomeCompleto</h5>
                        <p class="card-text text-muted small mb-3 text-truncate" title="@usuario.Email">@usuario.Email</p>

                        <div class="d-flex justify-content-center gap-2 mb-3 flex-wrap">
                            @if (usuario.Filhos != null && usuario.Filhos.Any())
                            {
                                <span class="badge bg-info-subtle text-info-emphasis border border-info-subtle">
                                    <i class="bi bi-people-fill me-1"></i> @usuario.Filhos.Count Filho(s)
                                </span>
                            }
                            
                            @if (!string.IsNullOrEmpty(usuario.Cidade))
                            {
                                <span class="badge bg-light text-dark border">
                                    <i class="bi bi-geo-alt-fill me-1"></i> @usuario.Cidade/@usuario.Estado
                                </span>
                            }
                        </div>
                        
                        @if (usuario.StatusAprovacao != StatusAprovacao.Aprovado)
                        {
                            <div class="alert alert-sm py-1 px-2 mb-0 d-inline-block @(usuario.StatusAprovacao == StatusAprovacao.Rejeitado ? "alert-danger" : "alert-warning")">
                                <small>
                                    @if(usuario.StatusAprovacao == StatusAprovacao.Rejeitado) { <i class="bi bi-x-circle me-1"></i> }
                                    else { <i class="bi bi-hourglass-split me-1"></i> }
                                    <strong>Status:</strong> @usuario.StatusAprovacao
                                </small>
                            </div>
                        }
                    </div>

                    <div class="card-footer bg-white border-top-0 pb-3 pt-0">
                        <div class="d-grid gap-2">
                            <!-- Ações Principais -->
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a>
                                <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                            </div>

                            <!-- Login Como (Intervenção) -->
                            <form asp-action="LoginComo" asp-route-id="@usuario.Id" method="post" class="w-100" onsubmit="return confirm('ATENÇÃO: Você será desconectado da conta de Admin e entrará como este usuário.\n\nDeseja continuar?');">
                                <button type="submit" class="btn btn-dark btn-sm w-100">
                                    <i class="bi bi-box-arrow-in-right me-2"></i> Logar como Usuário
                                </button>
                            </form>

                            <!-- Ações de Aprovação -->
                            @if (usuario.StatusAprovacao == StatusAprovacao.Pendente && usuario.TipoPerfil != TipoPerfil.Administrador)
                            {
                                <div class="btn-group w-100 mt-1" role="group">
                                    <button type="button" class="btn btn-success btn-sm" onclick="aprovarUsuario('@usuario.Id', '@usuario.NomeCompleto')">
                                        <i class="bi bi-check-lg"></i> Aprovar
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm" onclick="rejeitarUsuario('@usuario.Id', '@usuario.NomeCompleto')">
                                        <i class="bi bi-x-lg"></i> Rejeitar
                                    </button>
                                </div>
                            }
                            
                            <!-- Exclusão -->
                            @if (usuario.TipoPerfil != TipoPerfil.Administrador)
                            {
                                <form asp-action="Delete" asp-route-id="@usuario.Id" method="post" class="w-100 mt-1" 
                                      onsubmit="return confirmarExclusao(this, 'Tem certeza que deseja excluir permanentemente o usuário @usuario.NomeCompleto?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link text-danger btn-sm w-100 text-decoration-none opacity-75 hover-opacity-100">
                                        <i class="bi bi-trash me-1"></i> Excluir Conta
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Paginação -->
    @if (ViewBag.TotalPaginas > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav>
                <ul class="pagination">
                    @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                    {
                        <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pagina="@i" 
                               asp-route-busca="@ViewBag.Busca" asp-route-tipoPerfil="@ViewBag.TipoPerfil">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

<script>
function aprovarUsuario(usuarioId, nomeUsuario) {
    if (confirm(`Aprovar o perfil de ${nomeUsuario}?`)) {
        fetch('@Url.Action("Aprovar")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            },
            body: `id=${usuarioId}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Erro ao aprovar perfil');
            }
        });
    }
}

function rejeitarUsuario(usuarioId, nomeUsuario) {
    const motivo = prompt(`Por qual motivo deseja rejeitar o perfil de ${nomeUsuario}?`);
    if (motivo) {
        fetch('@Url.Action("Rejeitar")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            },
            body: `id=${usuarioId}&motivo=${encodeURIComponent(motivo)}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Erro ao rejeitar perfil');
            }
        });
    }
}

function confirmarExclusao(form, mensagem) {
    return confirm(mensagem);
}
</script>