<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin AUTistima</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --sidebar-width: 260px;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }
        
        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: var(--sidebar-width);
            height: 100vh;
            background: linear-gradient(180deg, #2c3e50 0%, #1a252f 100%);
            padding: 1rem;
            overflow-y: auto;
            z-index: 1000;
        }
        
        .admin-sidebar .logo {
            color: white;
            font-size: 1.5rem;
            font-weight: 700;
            padding: 1rem 0;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            margin-bottom: 1rem;
        }
        
        .admin-sidebar .logo span {
            color: var(--color-salmon, #e8998d);
        }
        
        .admin-sidebar .nav-link {
            color: rgba(255,255,255,0.7);
            padding: 0.75rem 1rem;
            border-radius: 8px;
            margin-bottom: 4px;
            transition: all 0.2s;
        }
        
        .admin-sidebar .nav-link:hover,
        .admin-sidebar .nav-link.active {
            background: rgba(255,255,255,0.1);
            color: white;
        }
        
        .admin-sidebar .nav-link i {
            width: 24px;
        }
        
        .admin-content {
            margin-left: var(--sidebar-width);
            min-height: 100vh;
        }
        
        .admin-header {
            background: white;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e9ecef;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .sidebar-section-title {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: rgba(255,255,255,0.4);
            padding: 1rem 1rem 0.5rem;
            margin-top: 1rem;
        }

        @@media (max-width: 991.98px) {
            .admin-sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s;
            }
            .admin-sidebar.show {
                transform: translateX(0);
            }
            .admin-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <aside class="admin-sidebar" id="adminSidebar">
        <div class="logo">
            <span>AUT</span>istima
            <small class="d-block text-white-50 fs-6 fw-normal">Administração</small>
        </div>
        
        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")" 
               asp-area="Admin" asp-controller="Admin" asp-action="Index">
                <i class="bi bi-speedometer2 me-2"></i> Dashboard
            </a>
            
            <div class="sidebar-section-title">Cadastros</div>
            
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Usuarios" ? "active" : "")" 
               asp-area="Admin" asp-controller="Usuarios" asp-action="Index">
                <i class="bi bi-people me-2"></i> Usuários
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Escolas" ? "active" : "")" 
               asp-area="Admin" asp-controller="Escolas" asp-action="Index">
                <i class="bi bi-bank me-2"></i> Escolas
            </a>
            
            <div class="sidebar-section-title">Conteúdo</div>
            
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Manejos" ? "active" : "")" 
               asp-area="Admin" asp-controller="Manejos" asp-action="Index">
                <i class="bi bi-lightbulb me-2"></i> Manejos
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Glossario" ? "active" : "")" 
               asp-area="Admin" asp-controller="Glossario" asp-action="Index">
                <i class="bi bi-book me-2"></i> Glossário
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Oportunidades" ? "active" : "")" 
               asp-area="Admin" asp-controller="Oportunidades" asp-action="Index">
                <i class="bi bi-briefcase me-2"></i> Oportunidades
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Servicos" ? "active" : "")" 
               asp-area="Admin" asp-controller="Servicos" asp-action="Index">
                <i class="bi bi-clipboard2-pulse me-2"></i> Serviços
            </a>
            
            <div class="sidebar-section-title">Sistema</div>
            
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Configuracoes" ? "active" : "")" 
               asp-area="Admin" asp-controller="Configuracoes" asp-action="Index">
                <i class="bi bi-gear me-2"></i> Configurações
            </a>
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house me-2"></i> Voltar ao Site
            </a>
            <a class="nav-link text-danger" href="#" onclick="document.getElementById('logoutForm').submit(); return false;">
                <i class="bi bi-box-arrow-right me-2"></i> Sair
            </a>
        </nav>
        
        <form id="logoutForm" asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-none"></form>
    </aside>

    <!-- Main Content -->
    <div class="admin-content">
        <header class="admin-header">
            <button class="btn btn-outline-secondary d-lg-none" onclick="document.getElementById('adminSidebar').classList.toggle('show')">
                <i class="bi bi-list"></i>
            </button>
            <div class="d-flex align-items-center ms-auto">
                <span class="me-3 text-muted">
                    <i class="bi bi-person-circle me-1"></i>
                    @User.Identity?.Name
                </span>
            </div>
        </header>
        
        <main>
            @if (TempData["Mensagem"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                    <i class="bi bi-check-circle me-2"></i>
                    @TempData["Mensagem"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Erro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    @TempData["Erro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
