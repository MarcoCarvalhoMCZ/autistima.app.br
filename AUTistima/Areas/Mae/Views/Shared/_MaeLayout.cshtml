@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
@{
    var currentUser = await UserManager.GetUserAsync(User);
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Meu Espa√ßo AUTistima</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --color-salmon: #F28B82;
            --color-salmon-dark: #d57a73;
        }
        .sidebar-mae {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 260px;
            background: linear-gradient(180deg, var(--color-salmon) 0%, var(--color-salmon-dark) 100%);
            padding-top: 1rem;
            z-index: 1000;
        }
        .sidebar-mae .nav-link {
            color: rgba(255,255,255,0.9);
            padding: 0.75rem 1.5rem;
            border-radius: 0;
            transition: all 0.2s;
        }
        .sidebar-mae .nav-link:hover,
        .sidebar-mae .nav-link.active {
            background: rgba(255,255,255,0.2);
            color: #fff;
        }
        .sidebar-mae .nav-link i {
            width: 24px;
        }
        .main-content-mae {
            margin-left: 260px;
            min-height: 100vh;
            background-color: #fdf8f7;
        }
        .mae-header {
            background: white;
            border-bottom: 1px solid #f5d5d2;
            padding: 1rem 1.5rem;
        }
        .badge-mae {
            background-color: var(--color-salmon);
            color: white;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar-mae d-flex flex-column">
        <div class="px-3 mb-4">
            <a href="/" class="text-decoration-none">
                <h4 class="text-white mb-0">
                    <i class="bi bi-heart-pulse me-2"></i>AUTistima
                </h4>
                <small class="text-white opacity-75">Meu Espa√ßo</small>
            </a>
        </div>
        
        <hr class="bg-white mx-3 my-2 opacity-50">
        
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
                   asp-area="Mae" asp-controller="Mae" asp-action="Index">
                    <i class="bi bi-house-heart me-2"></i>Meu Painel
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "MeusFilhos" ? "active" : "")" 
                   asp-area="Mae" asp-controller="Mae" asp-action="MeusFilhos">
                    <i class="bi bi-people me-2"></i>Meus Filhos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "MeusManejos" ? "active" : "")" 
                   asp-area="Mae" asp-controller="Mae" asp-action="MeusManejos">
                    <i class="bi bi-lightbulb me-2"></i>Meus Manejos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "MeusPosts" ? "active" : "")" 
                   asp-area="Mae" asp-controller="Mae" asp-action="MeusPosts">
                    <i class="bi bi-chat-heart me-2"></i>Minhas Publica√ß√µes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Perfil" ? "active" : "")" 
                   asp-area="Mae" asp-controller="Mae" asp-action="Perfil">
                    <i class="bi bi-person-heart me-2"></i>Meu Perfil
                </a>
            </li>
        </ul>
        
        <hr class="bg-white mx-3 my-2 opacity-50">
        
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Acolhimento" asp-action="Index">
                    <i class="bi bi-chat-quote me-2"></i>Central de Acolhimento
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Manejos" asp-action="Index">
                    <i class="bi bi-book me-2"></i>Ver Manejos
                </a>
            </li>
        </ul>
        
        <hr class="bg-white mx-3 my-2 opacity-50 mt-auto">
        
        <ul class="nav flex-column mb-3">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house me-2"></i>Voltar ao Site
                </a>
            </li>
            <li class="nav-item">
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="nav-link border-0 bg-transparent w-100 text-start">
                        <i class="bi bi-box-arrow-left me-2"></i>Sair
                    </button>
                </form>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="main-content-mae">
        <header class="mae-header d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0">@ViewData["Title"]</h5>
            </div>
            <div class="d-flex align-items-center gap-3">
                <span class="text-muted">Ol√°, @currentUser?.NomeCompleto.Split(' ').First()! üíï</span>
            </div>
        </header>
        
        <main class="p-4">
            @if (TempData["Mensagem"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Mensagem"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Erro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle me-2"></i>@TempData["Erro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
