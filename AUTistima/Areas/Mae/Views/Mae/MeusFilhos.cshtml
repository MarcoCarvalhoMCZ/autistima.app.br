@model IEnumerable<AUTistima.Models.Child>
@using AUTistima.Models.Enums
@{
    ViewData["Title"] = "Meus Filhos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Gerencie as informações dos seus filhos</p>
    </div>
    <a asp-area="" asp-controller="Filhos" asp-action="Create" class="btn" style="background-color: #F28B82; color: white;">
        <i class="bi bi-plus-circle me-2"></i>Cadastrar Filho
    </a>
</div>

@if (!Model.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-people display-1 text-muted mb-3"></i>
            <h4 class="text-muted">Nenhum filho cadastrado</h4>
            <p class="text-muted">Cadastre seus filhos para ter acesso a recursos personalizados!</p>
            <a asp-area="" asp-controller="Filhos" asp-action="Create" class="btn mt-2" style="background-color: #F28B82; color: white;">
                <i class="bi bi-plus-circle me-2"></i>Cadastrar Primeiro Filho
            </a>
        </div>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var filho in Model)
        {
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                        <span class="fw-semibold">@filho.Nome</span>
                        @if (filho.PossuiDiagnostico)
                        {
                            <span class="badge" style="background-color: #F28B82;">Diagnóstico</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Em investigação</span>
                        }
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            @if (filho.DataNascimento.HasValue)
                            {
                                var idade = DateTime.Today.Year - filho.DataNascimento.Value.Year;
                                if (DateTime.Today.DayOfYear < filho.DataNascimento.Value.DayOfYear) idade--;
                                <div class="col-6">
                                    <small class="text-muted d-block">Idade</small>
                                    <span>@idade anos</span>
                                </div>
                            }
                            @if (filho.NivelSuporte.HasValue)
                            {
                                <div class="col-6">
                                    <small class="text-muted d-block">Nível de Suporte</small>
                                    <span class="badge bg-info">Nível @((int)filho.NivelSuporte.Value)</span>
                                </div>
                            }
                        </div>

                        @if (filho.Escola != null || !string.IsNullOrEmpty(filho.EscolaNome))
                        {
                            <div class="mb-3">
                                <small class="text-muted d-block">Escola</small>
                                <span>
                                    <i class="bi bi-building me-1"></i>
                                    @(filho.Escola?.Nome ?? filho.EscolaNome)
                                </span>
                                @if (filho.PossuiPAE)
                                {
                                    <span class="badge bg-success ms-2">PAE</span>
                                }
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(filho.EstrategiasCrise))
                        {
                            <div class="mb-3">
                                <small class="text-muted d-block">Estratégias para Crises</small>
                                <p class="small mb-0">@(filho.EstrategiasCrise.Length > 100 ? filho.EstrategiasCrise.Substring(0, 100) + "..." : filho.EstrategiasCrise)</p>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <div class="btn-group btn-group-sm">
                            <a asp-area="" asp-controller="Filhos" asp-action="Edit" asp-route-id="@filho.Id" 
                               class="btn btn-outline-primary">
                                <i class="bi bi-pencil me-1"></i>Editar
                            </a>
                            <a asp-area="" asp-controller="Filhos" asp-action="Details" asp-route-id="@filho.Id" 
                               class="btn btn-outline-secondary">
                                <i class="bi bi-eye me-1"></i>Detalhes
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="mt-4">
    <div class="card border-0" style="background-color: rgba(242, 139, 130, 0.1);">
        <div class="card-body">
            <h6 class="mb-2"><i class="bi bi-shield-check me-2" style="color: #F28B82;"></i>Privacidade</h6>
            <p class="mb-0 small text-muted">
                As informações dos seus filhos são privadas e visíveis apenas para você. 
                Usamos esses dados para personalizar recomendações de manejos e conectá-la 
                com recursos adequados ao nível de suporte necessário.
            </p>
        </div>
    </div>
</div>
